  {{#if content.isLoaded}}
  <div class="contact-card-inner">
    <div class="contact-avatar">
      <span class="inline-checkbox">
        {{view Ember.Checkbox checkedBinding="content.isSelected"}}
      </span>
      <img {{bindAttr src="content.avatar.small_url" title="content.name"}}>
    </div>
    <div class="contact-details">
      <h4 class="headline">
        {{#view contactPageLink contentBinding="content"}}{{content.name}}{{/view}}
        {{view Radium.LabelView contactBinding="this" labelBinding="content.status"}}
        {{Radium.contactsController.categoryFilter}}

        {{#each content.emailAddresses}}
          {{view 
            Radium.TooltipView 
            valueBinding="value" 
            icon="mail"
            text="Message"
            action="sendContactMessage"
            target="parentView"
          }}
        {{/each}}
        {{#each content.phoneNumbers}}
          {{view Radium.TooltipView valueBinding="value" text="Call" icon="call"}}
        {{/each}}
      </h4>
      {{#if content.campaigns.length}}
        <p><strong>Groups:</strong> 
          {{#each content.groups}}
            {{name}}
          {{/each}}
        </p>
      {{/if}}
      {{#if content.campaigns.length}}
        <p><strong>Campaigns:</strong> 
          {{#each content.campaigns}}
            <a {{bindAttr href="url"}}>{{name}}</a> 
          {{/each}}
        </p>
      {{/if}}
    </div>
  </div>
  {{/if}}