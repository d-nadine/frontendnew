{{#with Radium.todosController}}
  {{#if sortedOverdueTodos}}
    <h4>Overdue</h4>
    {{#each sortedOverdueTodos}}
      {{view Radium.FeedView contentBinding="this"}}
    {{/each}}
    <hr>
  {{/if}}

  {{#if sortedDueToday}}
    {{#each sortedDueToday}}
      {{view Radium.FeedView contentBinding="this"}}
    {{/each}}
    <hr>
  {{else}}
    <div class="well">
      <h3 align="center">Nothing going on today yet...</h3>
    </div>
  {{/if}}
{{/with}}