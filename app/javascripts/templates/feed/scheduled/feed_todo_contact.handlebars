{{#with todo}}

{{#if overdue}}
  <i class="pull-left activity-icon icon-overdue"></i>
{{/if}}

{{#if isCall}}
  <i class="pull-left activity-icon icon-call"></i>
{{else}}
  <i class="pull-left activity-icon icon-todo"></i>
{{/if}}

{{#if canEdit}}
  {{view checkboxView}}
{{/if}}
{{view Radium.LabelView labelBinding="reference.contact.status"}}


<a href="/contacts/{{unbound reference.contact.id}}">{{reference.contact.name}}</a>: 
{{#if canEdit}}
  {{inlineTextField description}}
{{else}}
  {{description}}
{{/if}}
  
(<a href="/users/{{unbound user.id}}">{{user.abbrName}}</a>)

{{/with}}