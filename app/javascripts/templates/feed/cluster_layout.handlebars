{{time "feeditem"}}
{{#view feedHeaderView class="row"}}
<div class="span9 feed-header" {{bindAttr title="content.id"}}>
  <div class="row">
    <div class="span1">
      <i {{bindAttr class=":feed-expand-icon :icon-plus isActionsVisible:icon-minus"}}></i>
    </div>
    <div class="span8">
      <p>
        {{#with content}}
          <span class="content">{{yield}}</span>
        {{/with}}
      </p>
    </div> <!-- /.span9 -->
  </div> <!-- /.row -->
</div>
{{/view}}
{{view activityActionsView contentBinding="this"}}
{{timeEnd "feeditem"}}

