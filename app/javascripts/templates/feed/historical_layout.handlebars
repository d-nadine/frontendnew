<div class="row">
  <div class="span9 feed-description">
    {{view iconView}}
    <p>
      {{#with content}}
        <span class="content">{{yield}}</span>
      {{/with}}
      {{#if content.comments.length}}
        <i class="icon-comment comment-toggle-button"></i>
        ({{content.comments.length}})
      {{/if}}
    </p>

    {{#if isActionsVisible}}
      <p class="feed-actions">
        {{#if content.canEdit}}
          <a href="#"><i class="icon-pencil"></i> Edit</a>
          {{#if isReassigning}}
            {{view userSelect}}
          {{else}}
            <a href="#" {{action "reassign"}}><i class="icon-share-alt"></i> Reassign</a>
          {{/if}}
        {{/if}}
        <a href="#" {{action "addTodo"}}><i class="icon-check"></i> Add Todo</a>
        <a href="#" {{action "addCallTask"}}><i class="icon-check"></i> Call</a>
      </p>
    {{/if}}
  </div>
</div>