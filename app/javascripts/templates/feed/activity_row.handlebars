{{#view feedHeaderView class="row"}}
  <div class="span9 feed-header">
    <div class="row">
      <div class="span2">
        <span class="timestamp">
          {{view iconView}}
          {{formatTime content.timestamp}}
        </span>
      </div>
      <div class="span7 feed-description">
        <p>
          <span class="content">
            {{view Radium.TodoView todoBinding="content.todo"}}
          </span>
          {{#if content.comments.length}}
            <i class="icon-comment comment-toggle-button"></i>
            ({{content.comments.length}})
          {{/if}}
        </p>
      </div> <!-- /.feed-description -->
    </div> <!-- /.row -->
    {{#if isActionsVisible}}
      <p class="feed-actions">
        {{#if content.todo.canEdit}}
          <a href="#" {{action "toggleEditMode" target="parentView"}}><i class="icon-pencil"></i> Edit</a>
        {{/if}}
        <a href="#" {{action "addTodo" target="parentView"}}><i class="icon-check"></i> Add Todo</a>
      </p>
    {{/if}}
  </div> <!-- /.feed-header -->
{{/view}}
{{#if isEditVisible}}
  <div class="row">
    <div class="span9">
      {{view Radium.TodoEditView todoBinding="content.todo"}}
    </div>
  </div>
{{/if}}
{{view activityActionsView}}