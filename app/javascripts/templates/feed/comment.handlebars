{{#with comment}}
  <a href="/users/{{unbound user.id}}" class="user-avatar">
    {{#if user.avatar.small_url}}
    <img {{bindAttr src="user.avatar.small_url"}}>
    {{else}}
    <img src="/images/fallback/small_default.png">
    {{/if}}
  </a>

  <div class="comment-text">
    <strong>
      <a href="/users/{{unbound user.id}}">{{user.abbrName}}</a>
    </strong><br>
    {{text}}
    <small class="time" {{bindAttr title="dateToISO8601"}}>
      {{formatDate createdAt}}
    </small>
  </div>
{{/with}}