<div class="row">
  
  <div id="sidebar" class="span3">
    {{view Radium.ProfileView}}
    {{view Radium.DashboardFeedFilterView}}
    <h3>Team</h3>
    {{view Radium.UsersListView}}
  </div>
  
  <div class="span9">
    <div class="row">
      {{view Radium.GlobalSearchTextView}}
    </div>
    {{view Radium.AnnouncementsView}}
    <div id="form-container"></div>
        
    <div class="row">
      <div class="span9">
       {{#view Ember.View tagName="ul" class="nav nav-tabs"}}
          <li class="active"><a href="#" {{bindAttr data-feed-group="today"}}>Today</a></li>
          <li><a href="#" {{bindAttr data-feed-group="week"}}>This Week</a></li>
          <li><a href="#" {{bindAttr data-feed-group="month"}}>This Month</a></li>
          <li><a href="#" {{bindAttr data-feed-group="quarter"}}>This Quarter</a></li>
          <li><a href="#" {{bindAttr data-feed-group="year"}}>Everything</a></li>
        {{/view}}
        <div class="page-header">
          <h3>{{Radium.accountController.content.name}}'s Coffee Cup Summary</h3>
        </div>
      </div>
    </div>

    {{#with Radium.feedByActivityController.coffeeCupSummary}}
    <div class="stats row">
      <div class="span2">
        <dl>
          <dt>Todos</dt>
          <dd>
            {{todoCreated}} created<br>
            {{todoAssigned}} assigned<br>
            {{todoFinished}} finished
          </dd>
        </dl>
      </div>
      <div class="span2">
        <dl>
          <dt>Campaigns</dt>
          <dd>
            {{campaignCreated}} created<br>
            {{campaignAssigned}} assigned<br>
            {{campaignContactAdded}} added<br>
            {{campaignContactRemoved}} removed<br>
            {{campaignFollowed}} followed
          </dd>
        </dl>
      </div>
      <div class="span2">
        <dl>
          <dt>Contacts</dt>
          <dd>
            {{contactCreated}} created<br>
            {{contactAssigned}} assigned<br>
            {{contactBecameLead}} became leads<br>
            {{contactBecameProspect}} became prospects<br>
            {{contactBecameOpportunity}} became opportunities<br>
            {{contactBecameCustomer}} became customers<br>
            {{contactBecameDeadEnd}} became dead ends<br>
            {{contactFollowed}} followed
          </dd>
        </dl>
      </div>
      <div class="span2">
        <dl>
          <dt>Meetings</dt>
          <dd>
            {{meetingCreated}} created<br>
            {{meetingRescheduled}} rescheduled<br>
            {{meetingCancelled}} cancelled<br>
            {{meetingConfirmed}} confirmed<br>
            {{meetingRejected}} rejected<br>
          </dd>
        </dl>
        <dl>
          <dt>Phone Calls</dt>
          <dd>
            {{phoneCallCreated}} calls were made<br>
          </dd>
        </dl>
      </div>
      {{/with}}
    </div>

    <div class="row">
      <div class="span9">
        <div class="page-header">
          <h3>Activity Ticker</h3>
        </div>
        {{#with Radium.feedByDayController}}
          {{#if activityList}}
            <table class="table">
              <tbody>
                {{#each activityList}}
                  <tr>
                    <td><small>{{formatTime timestamp}}</small> {{owner.user.name}} {{tag}} a {{kind}}.</td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          {{else}}
            <h3 align="center">No activities yet.</h3>
          {{/if}}
        {{/with}}
      </div>
    </div>
  </div>
</div>