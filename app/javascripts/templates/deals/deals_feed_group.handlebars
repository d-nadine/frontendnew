{{#each Radium.dealsDateGroupsController.selectedDateType}}
  <section>
    <div class="page-header">
      <h2>{{formatDate datetime}}</h2>
    </div>
    <div class="row feed-item">
      <div class="span9">
      {{#if pending.length}}
        {{#view Radium.FeedItemBlockView 
          filter="pending" 
          dealBinding="pending"
          categoryBinding="Radium.dealsDateGroupsController.categoryFilter"
        }}
          <div class="span9">
            {{#view Radium.FeedDealHeadlineView}}
              <p><b>{{ totalDeals }}</b> pending worth ${{ dealsTotal }}</p>
            {{/view}}
          </div>
          {{view Radium.FeedItemDealsPendingView class="span9"}}
        {{/view}}
      {{/if}}

      {{#if paid.length}}
        {{#view Radium.FeedItemBlockView 
          filter="paid" 
          dealBinding="paid"
          categoryBinding="Radium.dealsDateGroupsController.categoryFilter"
        }}
          <div class="span9">
            {{#view Radium.FeedDealHeadlineView class="alert-success"}}
              <p><b>{{ totalDeals }}</b> paid worth ${{ dealsTotal }}</p>
            {{/view}}
          </div>
          {{view Radium.FeedItemDealsPendingView class="span9"}}
        {{/view}}
      {{/if}}

      {{#if rejected.length}}
        {{#view Radium.FeedItemBlockView 
          filter="rejected" 
          dealBinding="rejected"
          categoryBinding="Radium.dealsDateGroupsController.categoryFilter"
        }}
          <div class="span9">
            {{#view Radium.FeedDealHeadlineView class="alert-error"}}
              <p><b>{{ totalDeals }}</b> lost worth ${{ dealsTotal }}</p>
            {{/view}}
          </div>
          {{view Radium.FeedItemDealsPendingView class="span9"}}
        {{/view}}
      {{/if}}

      {{#if closed.length}}
        {{#view Radium.FeedItemBlockView 
          filter="closed" 
          dealBinding="closed"
          categoryBinding="Radium.dealsDateGroupsController.categoryFilter"
        }}
          <div class="span9">
            {{#view Radium.FeedDealHeadlineView class="alert-success"}}
              <p><b>{{ totalDeals }}</b> closed worth ${{ dealsTotal }}</p>
            {{/view}}
          </div>
          {{view Radium.FeedItemDealsPendingView class="span9"}}
        {{/view}}
      {{/if}}
    </div>
  </section>
{{/each}}