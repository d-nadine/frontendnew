<div class="row">
  <div class="span1">
    <i {{bindAttr class=":feed-expand-icon :icon-plus expanded:icon-minus"}}></i>
  </div>
  <div class="span8">
    <p>
      {{#with view.content}}
        <span class="content">{{yield}}</span>
        {{#if comments.length}}
          <i class="icon-comments"></i>
          ({{comments.length}})
        {{/if}}
      {{/with}}
    </p>
  </div>
</div>
{{#if view.expanded}}
  <p class="feed-actions">
    {{#if view.content.isEditable}}
      <a href="#" {{action "edit" target="parentView"}}><i class="icon-edit"></i> Edit</a>
    {{/if}}
    <a href="#" {{action "showTodoForm" target="parentView"}}><i class="icon-add-todo"></i> Add Todo</a>
  </p>
{{/if}}
