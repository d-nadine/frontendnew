<form class="well">
  <legend>Add a Contact</legend>
  <fieldset>
    <label for="contact-name">Name</label>
    <input name="contact-name" id="contact-name" class="span6">
  </fieldset>
  <fieldset class="form-inline" id="email-addresses">
    <legend>Emails</legend>
    <div class="control-group">
      <input type="text" class="email-name" placeholder="Name">
      <input type="text" class="email-value" placeholder="Email">
      <!-- <i class="icon-plus-sign"></i> -->
    </div>
  </fieldset>

  <fieldset class="form-inline" id="phone-numbers">
    <legend>Phone Numbers</legend>
    <div class="control-group">
      <input type="text" class="phone-name" placeholder="Name">
      <input type="text" class="phone-value" placeholder="Phone Number">
      <!-- <i class="icon-plus-sign"></i> -->
    </div>
  </fieldset>
  
  <fieldset class="form-inline" id="addresses">
    <legend>Addresses</legend>
    <div class="control-group">
      <input class="address-name" placeholder="Name">
      <input class="address-street" placeholder="Street">
      <input class="address-state" placeholder="State">
      <select class="address-country">
        <option>Country</option>
        <option value="Australia">Australia</option>
        <option value="Canada">Canada</option>
        <option value="United State">United States</option>
      </select>
      <input class="address-zip" placeholder="Zip Code">
    </div>
  </fieldset>
