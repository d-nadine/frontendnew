<form class="well">
  <fieldset>
    {{view topicField label="Meeting Topic"}}

  </fieldset>
  <fieldset>
    {{view inviteField label="Invite"}}

    {{#view selectedInvitees}}
      {{#each content}}
        {{view Radium.TokenView itemBinding="this"}}
      {{/each}}
      <div class="clearfix"></div>
    {{/view}}

  </fieldset>
  <div class="meeting-date-picker">
    <div class="pull-left">
      <label for="date">Date</label>
      {{view meetingDateField}}
    </div>
    <div class="pull-left">
      {{view startsAtField label="Starts At"}}
      <select id="start-time-meridian" style="width: 60px;">
        <option value="am" selected>AM</option>
        <option value="pm">PM</option>
      </select>
    </div>
    <div class="pull-left">
      {{view endsAtField label="Ends At"}}
      <select id="end-time-meridian" style="width: 60px;">
        <option value="am" selected>AM</option>
        <option value="pm">PM</option>
      </select>
    </div>
  </div>
  <fieldset>
    {{view locationField label="Location"}}
    {{#view submitButton class="btn btn-primary"}}Save{{/view}}
  </fieldset>
</form>