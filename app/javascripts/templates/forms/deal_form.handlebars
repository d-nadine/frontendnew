<form class="well">
  <legend>Create a Deal</legend>
  
  {{view dealDescriptionField label="Description"}}

  {{view contactField label="Contact"}}
  
  <fieldset class="control-group">
    <label for="amount">Amount</label>
    <input type="text" name="amount" id="amount" value="">
  </fieldset>

  <div class="inline-date-picker">
    <div class="pull-left">
      <label for="date">Close Date</label>
      {{view Radium.DatePickerField id="close-date" name="close-date" class="input-small"}}
    </div>
    <div class="pull-left">
      {{view closeTimeField label="Close Time"}}
    </div>
    <div class="pull-left">
      {{#view submitButton class="btn btn-primary"}}Save{{/view}}
    </div>
  </div>
</form>