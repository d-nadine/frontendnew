<form data-type="call_list" class="well">
  <legend>Add to Call List</legend>
  <label for="finish-by">Finish by</label>
  {{view Radium.DatePickerField id="finish-by" name="finish-by" class="input-small"}}
  <label for="assigned-to">Assigned To</label>
  <select name="assigned-to" id="assigned-to">
    <option value="">Assigned To</option>
    {{#each Radium.usersController}}
    <option {{bindAttr value="id"}}>{{abbrName}}</option>
    {{/each}}
  </select>

  <label for="call-list">Call List</label>

  <select name="call-list" id="call-list">
    <option value="">Assign to a Call List</option>
    {{#each Radium.callListsController}}
    <option {{bindAttr value="id"}}>{{description}}</option>
    {{/each}}
  </select>

  {{view Radium.FormCheckbox 
      title="Add Reminder" 
      valueBinding="wantsReminder"
  }}

  <div id="reminder-holder"></div>

  <div class="form-actions">
    {{#view submitButton class="btn btn-primary"}}Save{{/view}}
    {{#view cancelFormButton class="btn"}}Cancel{{/view}}
  </div>
</form>