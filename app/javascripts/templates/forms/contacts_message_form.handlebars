<form class="well">
  <legend>Send a Message</legend>
  <p><strong>To:</strong> 
    {{#with Radium.contactsController}}
      {{#if selectedContactsNames}}
        {{selectedContactsNames}}
        <input type="hidden" name="message-to" id="message-to" {{bindAttr value="selectedContactsNames"}}>
      {{/if}}
    {{/with}}
    {{#if data}}
      {{data.name}}
      <input type="hidden" name="message-to" id="message-to" {{bindAttr value="data.value"}}>
    {{/if}}
  </p>

  <label for="subject">Subject</label>
  <input name="subject" id="subject" class="span8">

  <label for="message">Message</label>
  <textarea name="message" id="message" class="span8"></textarea>

  <div class="form-actions">
    {{#view submitButton class="btn btn-primary"}}Send{{/view}}
    {{#view cancelFormButton class="btn"}}Cancel{{/view}}
  </div>
</form>