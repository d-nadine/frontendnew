<form class="form">
  <div class="meta">
    <img src="http://placehold.it/74x74" class="img-polaroid" alt="">
    {{#view view.companyInlineEditor valueBinding=name class="company"}}
      {{#if view.isEditing}}
        {{input value=name class="field company-name"}}
      {{else}}
        <h1>{{name}}<i class="icon-edit pull-right" {{action toggleEditor target=view bubbles=false}}></i></h1>
      {{/if}}
    {{/view}}


    {{view view.websiteInlineEditor class="website"}}
  </div>
  <hr class="first"/>
  {{#linkTo leads.fromCompany this classNames="btn btn-block add-contact"}}<i class="add icon-plus"></i>Add Contact{{/linkTo}}
  <hr />
  <div class="company-type">
    {{view view.statusInlineEditor viewName="statusChange"}}
  </div> 
  <hr />
  <div class="tag-picker">
    <div class="tag-label">
      <h2 class="blue">Tags</h2>
    </div>
    {{view view.tags placeholder="Add" viewName="tags"}}
  </div>
  <hr/>
  <div class="about">
    {{view view.aboutInlineEditor valueBinding=about}}
  </div>

  <hr/>

  {{view view.userInlineEditor valueBinding=user}}

  <hr />

  {{partial 'shared/add_files'}}

  <hr/>

  <div class="address">
    {{view view.addressInlineEditor}}
  </div>

  <hr/>

  {{partial 'shared/followers'}}
  <hr/>

  <button class="btn btn-danger btn-block" {{action confirmDeletion}}>Delete</button>
  <div class="modal hide fade">
    <div class="modal-header">
      <button type="button" {{action cancelStatusChange target="view" bubbles="false"}} class="close">Ã—</button>
      <h2>Change Satus?</h2>
    </div>
    <div class="modal-body">
      <form class="form">
        <p>You are about to change the status to <strong>{{status}}</strong>, this will change all the contacts for this company to <strong>{{status}}</strong>, do you want to do this?</p>
      </form>
    </div>
    <div class="modal-footer">
      <a href="#" {{action cancelChangeStatus target="view" bubbles="false"}} class="btn">Cancel</a>
      <a href="#" {{action changeStatus target="view" bubbles="false"}} class="btn btn-primary">Proceed</a>
    </div>
  </div>
</form>
