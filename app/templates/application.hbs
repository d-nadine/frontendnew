<div id="topbar" role="header" class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    {{#linkTo "dashboard" class="brand"}}
      <img src="/images/logo.png" alt="::radium">
    {{/linkTo}}

    <ul class="nav">
      <li id="btn-dashboard">
        {{#linkTo dashboard}}Dashboard{{/linkTo}}
      </li>

      <li id="btn-contacts">
        {{#linkTo contacts}}Contacts{{/linkTo}}
      </li>

      <li id="btn-inbox" class="dropdown">
        {{#linkTo messages}}Inbox{{/linkTo}}
      </li>
      <li id="btn-pipeline" class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          Pipeline<b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li>
            {{#linkTo pipeline.leads}}Leads{{/linkTo}}
            {{#linkTo pipeline.negotiating}}Negotiating{{/linkTo}}
            {{#linkTo pipeline.closed}}Closed{{/linkTo}}
            {{#linkTo pipeline.lost}}Lost{{/linkTo}}
          </li>
        </ul>
      </li>

      <li>{{#linkTo calendar today}}Calendar{{/linkTo}}</li>
    </ul>

    <ul class="nav pull-right">
      <li>
        <a href="https://radium.flowdock.com/invitations/6d70fab64e2ff9222f15f60adb2e8d875ed72c61-support" title="Support">Support</a>
      </li>
    </ul>

    <form class="navbar-search pull-right">
      <input type="text" class="search-query" placeholder="Unimplemented">
    </form>
  </div>
</div>

<div id="drawer-buttons">
  <a {{action toggleDrawer notificationsDrawerName}} href="#">
    <i class="icon-notifications"></i>
  </a>

  <a {{action back}} href="#">
    <i class="icon-back"></i>
  </a>

  {{outlet buttons}}

  {{#linkTo development}}
    <i class="icon-menu"></i>
  {{/linkTo}}

  {{#linkTo unimplemented class="settings"}}
    <i class="icon-menu"></i>
  {{/linkTo}}
</div>

