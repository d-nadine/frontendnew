<div id="topbar" role="header" class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    {{#linkTo unimplemented class="brand"}}
      <img src="/images/logo.png" alt="::radium">
    {{/linkTo}}

    <ul class="nav">
      <li class="dropdown">
        {{#linkTo messages}}Messages{{/linkTo}}
      </li>

      <li>{{#linkTo calendar today}}Calendar{{/linkTo}}</li>

      <li>{{#linkTo user currentUser}}Todos{{/linkTo}}</li>

      <li>{{#linkTo pipeline.index}}Pipeline{{/linkTo}}</li>

      <li>
        {{#linkTo addressbook.filter 'all'}}Address Book{{/linkTo}}
      </li>
    </ul>

    <ul class="nav pull-right">
      <li>
        <a href="https://radium.flowdock.com/invitations/6d70fab64e2ff9222f15f60adb2e8d875ed72c61-support" title="Support">Support</a>
      </li>
    </ul>

    <form class="navbar-search pull-right">
      <input type="text" class="search-query" placeholder="Unimplemented">
    </form>
  </div>
</div>

<div id="drawer-buttons">
  <a {{action toggleNotifications}} href="#">
    <i class="icon-notifications"></i>
  </a>

  <a {{action back}} href="#">
    <i class="icon-back"></i>
  </a>

  {{outlet buttons}}

  {{#linkTo development}}
    <i class="icon-menu"></i>
  {{/linkTo}}

  {{#linkTo unimplemented class="settings"}}
    <i class="icon-menu"></i>
  {{/linkTo}}
</div>

{{outlet drawer}}

{{outlet modal}}

{{outlet}}
