<div class="tabbar">
  <div class="tabbar-inner">
    <button type="button" class="btn btn-toggle-pipelines visible-tablet visible-phone pull-right" data-toggle="collapse" data-target=".pipeline-tabs">
      Pipeline states
    </button>
    <div class="nav-collapse collapse pipeline-tabs">
      <ul class="nav nav-tabs">
        <li>
          {{#linkTo "pipeline.index"}}All Pipeline{{/linkTo}}
        </li>
        {{#each workflowGroups itemController="workflowGroupItem"}}
          <li>
            {{#if isWorkflow}}
              {{#linkTo "pipeline.workflow" content.title}}
                {{content.title}} {{currency total}}
              {{/linkTo}}
            {{/if}}
            {{#if isClosed}}
              {{#linkTo "pipeline.closed"}}
                {{content.title}} {{currency total}}
              {{/linkTo}}
            {{/if}}
            {{#if isLost}}
              {{#linkTo "pipeline.lost"}}
                {{content.title}} {{currency total}}
              {{/linkTo}}
            {{/if}}
          </li>
        {{/each}}
        <li>
          {{#linkTo "pipeline.unpublished"}}
            Unpublished {{unpublished.length}}
          {{/linkTo}}
        </li>
      </ul>
    </div>
  </div>
</div>

<div id="pipeline-results" class="">
  {{outlet confirmation}}
  {{outlet}}
</div>
