<div class="block email-card message-card">
  <div class="adder">
    <div class="arrow"></div>
    {{#if showFormBox}}
      <i class="icon-minus" {{action toggleFormBox}}></i>
    {{else}}
      <i class="icon-plus" {{action toggleFormBox}}></i>
    {{/if}}
  </div>

  <div class="header">
    {{#if trackable}}
      {{view view.trackedToggleSwitch class="pull-right"}}
    {{/if}}

    <p>
      {{#if subject}}
        <big class="sender">{{link sender}}</big> writes <big class="subject"><strong>{{subject}}</strong></big>
      {{else}}
        Email from <big class="sender">{{link sender}}</big>
      {{/if}}

      <a href="#" class="more muted pull-right" {{action toggleMeta}}><small>
          {{#if showMeta}}
            Less
          {{else}}
            More
          {{/if}}
      </small></a>
    </p>

    {{#if showMeta}}
      <div class="meta">
        <dl>
          <dt>To</dt>
          <dd>
            <span class="sentence">
              {{#each to}}
                <span>{{link  this}}</span>
              {{/each}}
            </span>
          </dd>
          {{#if cc}}
            <dt>CC</dt>
            <dd>
              <span class="sentence">
                {{#each cc}}
                  <span>{{link  this}}</span>
                {{/each}}
              </span>
            </dd>
          {{/if}}
          <dt>Time</dt>
          <dd>{{formatDateTime sentAt format="full"}}</dd>
        </dl>
      </div>
    {{/if}}
  </div>

  <hr/>

  <div class="content">
    <div {{bindAttr class="message::empty :text"}}>
      {{#if message}}
        <p>
          {{!FIXME: This needs to some formatting}}
          {{unbound message}}
        </p>
      {{else}}
        <p>(No Message)</p>
      {{/if}}
    </div>

    {{partial "shared/attachments"}}

    <hr />

    {{partial 'shared/related_tasks'}}

    <div class="actions text-right">
      <a {{action showReplySection}} class="btn btn-link">
        <i class="icon-reply"></i>Reply
      </a>

      <a class="btn btn-link">
        <i class="icon-forward"></i>Forward
      </a>

      <a class="btn btn-link" {{action delete this}}>
        <i class="icon-delete"></i>
      </a>
    </div>
  </div>
</div>

{{#if showFormBox}}
  <div class="block block-connected block-blue">
    {{render "form_box" formBox}}
  </div>
{{/if}}

<div class="block block-gray">
  {{render 'comments' model}}
</div>
