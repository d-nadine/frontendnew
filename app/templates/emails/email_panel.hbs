{{#if content}}
  {{#if hasPreviousEmails}}
    <a  class="btn btn-large btn-full-width" {{action selectContent mostRecentEmail}}>
      Go to Most Recent Email<i class="icon-arrow-right pull-right"></i>
    </a>
  {{/if}}

  {{#each limitedContent itemController="email_item"}}
    {{template "emails/email_item"}}
  {{/each}}

  {{#if hiddenContent}}
    <div id="remaining-emails">
      <a class="btn btn-large btn-full-width" {{action showMore target="controller"}}>
        <i class="icon-plus"></i>{{hiddenContent.length}} Email(s) Remaining: Show More
      </a>
    </div>

    {{#with remainingContent}}
      {{template "emails/table"}}
    {{/with}}
  {{/if}}
{{else}}
  <div class="block">
    <h4>No Email Selected</h4>
  </div>
{{/if}}
