{{#if showExtensionCTA}}
  <div class="alert alert-chrome-extension">
    <div class="pull-left">
      <img src="/images/chrome-extension-screen.png" alt="Chrome Extension Screenshot" />
    </div>
    <div class="alert-chrome-extension-text">
      <h4>Radium Google Chrome Extension</h4>
      Check out our Extension for Google Chrome, works in Gmail. Install it from the <a href="#">Chrome Store</a>.
      <br><br>
      <div class="clearfix">
        <a href="#" class="btn btn-main btn-primary" {{action showExtension target="view"}}>Learn more</a>
        <a id="show-extension" href="https://chrome.google.com/webstore/detail/radium-crm/ehpfhdhoieenaefpejgogehbklildnja" class="hidden btn btn-main btn-primary" target="_blank">Learn more</a>
        <a href="#" class="btn btn-main btn-link" {{action "dismissExtension"}}>No, thanks</a>
      </div>
    </div>
  </div>
{{/if}}
