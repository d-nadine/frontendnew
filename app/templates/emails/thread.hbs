<div class="email-main">
  {{partial 'emails/importing'}}
  <div class="email-history">
  {{#if isLoading}}
    <div class="email-nav">
      {{partial 'is_loading'}}
    </div>
  {{/if}}
  {{#each model itemController="emailThreadItem" itemViewClass="Radium.ThreadItemView"}}
    {{#if isLoaded}}
      {{render "emails/item" this}}
    {{else}}
      {{partial 'is_loading'}}
    {{/if}}
  {{/each}}
  </div>
  <div class="right-column">
    {{#if senderIsContact}}
      {{contact-sidebar contact=firstSender tags=tags parent=this addTag="addTag" removeTag="removeTag" users=users user=currentUser leadSources=leadSources customFields=customFields confirmDeletion="confirmDeletion"}}
    {{/if}}
  </div>
</div>