<div class="email-history">
  {{#if isLoading}}
    <div class="email-nav">
      {{partial 'is_loading'}}
    </div>
  {{/if}}
  {{#each model itemController="emailThreadItem" itemViewClass="Radium.ThreadItemView"}}
    {{#if isLoaded}}
      {{render "emails/item" this}}
    {{else}}
      {{partial 'is_loading'}}
    {{/if}}
  {{/each}}
</div>
