<div class="email-main">
  {{partial 'emails/importing'}}
  <div class="email-history">
  {{#if isLoading}}
    <div class="email-nav">
      {{partial 'is_loading'}}
    </div>
  {{/if}}
  {{#each model itemController="emailThreadItem" itemViewClass="Radium.ThreadItemView"}}
    {{#if isLoaded}}
      {{render "emails/item" this}}
    {{else}}
      {{partial 'is_loading'}}
    {{/if}}
  {{/each}}
  </div>
  <div class="right-column">
    {{person-details person=model.firstObject.sender}}
  </div>
</div>