<h1>Radium.Contact Route</h1>
{{#if isPersonal}}
  <div class="alert alert-info">
    This contact is a personal conact.  Would you like to add this contact to Radium?
  </div>
  <div>
    <button {{action makeContactPublic this}} {{bindAttr disabled=isSaving}} class="btn btn-block btn-large btn-info">ADD CONTACT TO RADIUM</button>
  </div>
{{else}}
  {{render "form_box" formBox}}

  {{render "task_list" tasks}}

  {{render "feed" activities}}
{{/if}}
