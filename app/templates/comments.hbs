<div class="comments">
  {{#if comments.length}}
    <ul class="comments-list unstyled">
      {{#each comments}}
        <li class="comment">
          {{#with user}}
            <a {{action showUser this href=true}} class="avatar">
              <img {{bindAttr src="avatar.small_url"}} class="avatar">
            </a>
          {{/with}}

          <div class="text">
            {{text}}
          </div>
        </li>
      {{/each}}
    </ul>
  {{/if}}

  {{view view.commentTextArea}}
</div>
