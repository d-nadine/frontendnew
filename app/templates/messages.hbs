{{#if createEmail}}
  {{render 'messages/create_email'}}
{{else}}
  {{#if hasCheckedContent}}
    {{render 'messages/bulk_actions' checkedContent}}
  {{/if}}

  {{#if showDiscussion}}
    {{render 'messages/discussion_panel' selectedContent}}
  {{/if}}

  {{#if showEmails}}
    {{render 'messages/email_panel' history}}
  {{/if}}

  {{#if noSelection}}
    <div class="block">
      <p>Nothing selected!</p>
    </div>
  {{/if}}
{{/if}}
