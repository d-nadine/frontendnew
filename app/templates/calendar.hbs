<div class="calendar-navigation block shadowed">
  <h3>
    {{#linkTo calendar lastMonth class="btn pull-left"}}
      <i class="icon-chevron-left"></i>Last Month
    {{/linkTo}}

    {{format date format="%B %Y"}}

    {{#linkTo calendar nextMonth class="btn pull-right"}}
      Next Month<i class="icon-chevron-right"></i>
    {{/linkTo}}
  </h3>
</div>

{{control "form_box" formBox}}

<table class="calendar">
  <colgroup class="weekdays">
    <col class="monday" />
    <col class="tuesday" />
    <col class="wednesday" />
    <col class="thrusday" />
    <col class="friday" />
  </colgroup>
  <colgroup class="weekend">
    <col class="saturday" />
    <col class="sunday" />
  </colgroup>

  <thead>
    {{#each dayNames tagName="tr"}}
      <th>{{this}}</th>
    {{/each}}
  </thead>

  {{#each weeks tagName="tbody"}}
    {{#each calendarDay in this tagName="tr" itemController="calendarDayItem"}}
      <td {{bindAttr class="calendarDay.isDifferentMonth calendarDay.isToday :day"}}>
        <div class="wrapper">
          <span class="date">
            {{calendarDay.day}}
          </span>

          {{#each calendarDay.visibleContent tagName="ul" class="unstyled"}}
            <li>{{time time}} - {{truncate title length="15"}}</li>
          {{/each}}
        </div>
        {{#if calendarDay.hiddenContent}}
          <a class="btn-slab" {{action showMore target="calendarDay"}}>. . .</a>
        {{/if}}
      </td>
    {{/each}}
  {{/each}}
</table>
