<div class="btn-toolbar">
  <div class="btn-group">
    <a {{action deleteEmails target="controller"}} class="btn btn-danger delete-emails">
      <i class="icon-trash icon-large icon-white"></i> Delete
    </a>
  </div>
  <div class="btn-group">
    <a class="multiple-todos btn" {{action toggleTodoForm target="view"}}>Todo</a>
  </div>
</div>
<div class="well well-small">
  <div>
    {{selectedMail.length}} Email(s) Selected
  </div>
  <div class="rel">
    {{view view.FormContainer viewName="formContainer"}}
  </div>
  <table class="table table-bordered table-striped">
    {{each selectedMail itemViewClass="Radium.EmailListView"}}
  </table>
</div>

