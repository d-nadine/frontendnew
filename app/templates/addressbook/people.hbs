<div class="page-header">
  <div class="address-book-controls">
    <div class="pull-right">
      <form class="form-search pipeline-search">
        <i class="ss-symbolicons-block ss-search"></i>
        {{input value=searchText type="text" class="field search-text"}}
      </form>
    </div>
  </div>
</div>

<style type="text/css">
 .table-header {
   color: rgb(118,144,170);
   text-align: left;
   font-weight: bold;
   width: calc(100% - 15px);
   border-bottom: 1px solid black;

 }

 .table-cell {
   background-color: white;
   border-bottom: 1px solid transparent;
   border-right: 1px solid transparent;
 }
</style>

<div class="row-fluid table-header">
  <div class="span2 row-fluid">
    <div class="span2"></div>
    <div class="span10">Name</div>
  </div>
  <div class="span2">Company</div>
  <div class="span2 row-fluid">
    <div class="span6">Events</div>
    <div class="span6">Inactive</div>
  </div>
  <div class="span2">Next Task</div>
  <div class="span2">Assigned To</div>
  <div class="span2">Location</div>
</div>
{{#rd-lazy-each content=model endInSight="loadMoreContacts" height="500" rowHeight="50"}}
  <div class="row-fluid">
    <div class="span2 row-fluid">
      <div class="span2 table-cell">{{input type="checkbox"}}</div>
      <div class="span10 table-cell" style="word-break: break-all;">{{#link-to "contact" this}}{{displayName}}{{/link-to}}</div>
    </div>
    <div class="span2 table-cell">{{company.name}}</div>
    <div class="span2 row-fluid">
      <div class="span6 table-cell"></div>
      <div class="span6 table-cell"></div>
    </div>
    <div class="span2 table-cell">{{tasks.firstObject.displayName}}</div>
    <div class="span2 table-cell">{{#link-to "user" user}}{{user.name}}{{/link-to}}</div>
    <div class="span2 table-cell"></div>
  </div>
{{/rd-lazy-each}}
