<div class="members">
  {{#if contacts.length}}
    <div class="clearfix">
      {{#each truncatedContacts}}
        <div class="media">
          <div class="invitee-thumb pull-left">
            {{#if isLoaded}}
              {{avatar this size=small class="img-polaroid"}}
            {{else}}
              {{partial 'is_loading'}}
            {{/if}}
          </div>
          <div class="media-body">
            <div class="media-heading">
              {{#link-to 'contact' this}}{{displayName}}{{/link-to}}
            </div>
          </div>
        </div>
      {{/each}}
    </div>
    {{#if hasMoreContacts}}
      {{#link-to "people.index" "notasks" (query-params company=id contactimportjob="" user="" tag="")}}...{{/link-to}}
    {{/if}}
  {{else}}
    <label> No Members</label>
  {{/if}}
</div>
