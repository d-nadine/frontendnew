<div class="tabbar">
  <div class="tabbar-inner">
    <ul class="nav nav-tabs">
      <li>
        {{#link-to "people.index" "all" (query-params user="" tag="" company="" contactimportjob="")}}
          <i class="custom-icon-radium"></i> People
          <span class="badge">{{contactsTotal}}</span>
        {{/link-to}}
      </li>
      <li>
        {{#link-to "addressbook.companies"}}
          Companies
          <span class="badge">{{companiesTotal}}</span>
        {{/link-to}}
      </li>
      <li>
        {{#link-to "addressbook.untracked"}}
          <i class="custom-icon-google"></i> Untracked Contacts
          <span class="badge">{{untrackedTotal}}</span>
        {{/link-to}}
      </li>
      {{#unless currentUser.initialContactsImported}}
      <li>
        <a href="#">
          <span class="badge contacts-importing">Importing</span>
        </a>
      </li>
      {{/unless}}
    </ul>
  </div>
</div>
<div id="addressbook">
  {{outlet}}
</div>
