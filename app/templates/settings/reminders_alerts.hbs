<h3 class="settings-title">Reminders & Alerts</h3>
<form class="form-horizontal settings-form">
  <fieldset>
    <div {{bind-attr class=":control-group notifications.overdueTasks.enabled::control-disabled"}}>
      <span class="help-block">Send me a reminder when I have an overdue task:</span>
      <label class="control-label">When task is overdue</label>
      <div class="controls">
        <div class="input-append">
          {{input type="number"
            value=notifications.overdueTasks.duration
            placeholder="1"
            class="input-mini"
            disabledBinding="overdueTasksDisabled"}}
            <span class="add-on">min.</span>
        </div>
        {{toggle-switch class="checkbox inline" checked=notifications.overdueTasks.enabled}}
      </div>
    </div>

    <div {{bind-attr class=":control-group notifications.createdOverdueTasks.enabled::control-disabled"}}>
      <span class="help-block">Send me a reminder when I create a task for someone else:</span>
      <label class="control-label">When task is overdue</label>
      <div class="controls">
        <div class="input-append">
          {{input type="number"
            value=notifications.createdOverdueTasks.duration
            placeholder="1"
            class="input-mini"
            disabledBinding="createdTasksOverdueTaskDisabled"}}
          <span class="add-on">min.</span>
        </div>
        {{toggle-switch class="checkbox inline" checked=notifications.createdOverdueTasks.enabled}}
      </div>
    </div>

    <div {{bind-attr class=":control-group notifications.localMeetings.enabled::control-disabled"}}>
      <span class="help-block">Send me a reminder when a meeting is in my office/office building:</span>
      <label class="control-label">When meeting is in</label>
      <div class="controls">
        <div class="input-append">
          {{input type="number"
            value=notifications.localMeetings.duration
            placeholder="1"
            class="input-mini"
            disabledBinding="locaMeetingsDisabled"}}
          <span class="add-on">min.</span>
        </div>
        {{toggle-switch class="checkbox inline" checked=notifications.localMeetings.enabled}}
      </div>
    </div>

    <div {{bind-attr class=":control-group notifications.remoteMeetings.enabled::control-disabled"}}>
      <span class="help-block">Send me a reminder when a meeting is NOT in my office/office building:</span>
      <label class="control-label">When meeting is in</label>
      <div class="controls">
        <div class="input-append">
          {{input type="number"
            value=notifications.remoteMeetings.duration
            placeholder="1"
            class="input-mini"
            disabledBinding="remoteMeetingsDisabled"}}
          <span class="add-on">min.</span>
        </div>
        {{toggle-switch class="checkbox inline" checked=notifications.remoteMeetings.enabled}}
      </div>
    </div>

    <div {{bind-attr class=":control-group notifications.remoteMeetings.enabled::control-disabled"}}>
      <label class="control-label long-label">Send enabled reminders as an email also</label>
      <div class="controls">
        {{toggle-switch class="checkbox inline"}}
      </div>
    </div>
  </fieldset>

  <fieldset>
    <legend>Alerts</legend>
    <p {{bind-attr class=":control-inline-text notifications.leadIgnored.enabled::control-disabled"}}>
      If a lead is ignored for more than {{input type="number"
        value=notifications.leadIgnored.duration
        placeholder="1"
        class="input-mini"
        disabledBinding="leadIgnoredDisabled"}}
         days highlight that lead
    </p> {{toggle-switch class="checked inline" checked=notifications.leadIgnored.enabled}}

    <p {{bind-attr class=":control-inline-text notifications.clientIgnored.enabled::control-disabled"}}>
      If a client is ignored for more than {{input type="number"
        value=notifications.clientIgnored.duration
        placeholder="1"
        class="input-mini"
        disabledBinding="clientIgnoredDisabled"}}
         days highlight that client
    </p> {{toggle-switch class="checked inline" checked=notifications.clientIgnored.enabled}}

    <p {{bind-attr class=":control-inline-text notifications.taskIgnored.enabled::control-disabled"}}>
      If a client is ignored for more than {{input type="number"
        value=notifications.taskIgnored.duration
        placeholder="1"
        class="input-mini"
        disabledBinding="taskIngoredDisabled"}}
         days highlight that client
    </p> {{toggle-switch checked=notifications.taskIgnored.enabled}}
    <div {{bind-attr class=":control-group notifications.remoteMeetings.enabled::control-disabled"}}>
      <label class="control-label long-label">Send enabled alerts as an email also</label>
      <div class="controls">
        {{toggle-switch class="checked inline"}}
      </div>
    </div>
  </fieldset>
  <div class="form-actions">
    <button type="button" {{action "update"}} {{bind-attr disabled=isSaving}} class="btn btn-primary">Save</button>
    <button class="btn" {{action "cancel"}}>Cancel</button>
  </div>
</form>
