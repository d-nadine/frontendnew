<div class="page-header">
  <img src="http://placehold.it/50x50" alt="" class="pull-left company-logo">
  <h3>Initech, Inc.</h3>
</div>

{{#if isAdmin}}
  {{#unless hasGatewayAccount}}
    <div class="row">
      <div class="alert">
        You need to update your details with a valid credit card to upgrade your account.
      </div>
    </div>
  {{/unless}}

  {{#if isNewCard}}
    {{partial 'settings/billing_form'}}
  {{else}}
    <a href="#" class="btn" {{action "changeBilling"}}>Update Billing Info</a>
  {{/if}}
{{/if}}
<div class="upgrade-plan">
  <div class="page-header">
    <h4>Upgrate Account</h4>
  </div>
  <h2 class="text-center">
    {{controllers.users.length}}/{{controller.totalUsers}} Users to add users
  </h2>

  <div class="row">
    {{#each subscriptionPlans itemController="subscriptionPlanItem"}}
    <div class="span3">
      <ul {{bindAttr class=":pricing-table isCurrent"}}>
        <li class="title">{{unbound capitalize name}}</li>
        <li class="description">Manage your customers in a breathtakingly simple way. Radium is a CRM that doesn't get in the way of the way you work.</li>
        <li class="price">{{totalUsers}} Users</i>
        <li class="price">{{unbound currency amount}}/User</li>
        {{#if isAdmin}}
          <li class="cta-button">
            <button
              {{bindAttr class=":btn :btn-block isCurrent::btn-success" disabled="notSelectable"}}
              {{action updateSubscription name}}>
              {{#if isCurrent}}
                Your plan
              {{else}}
                Upgrade
              {{/if}}
            </button>
          </li>
        {{/if}}
      </ul>
    </div>
    {{/each}}
  </div>
</div>
