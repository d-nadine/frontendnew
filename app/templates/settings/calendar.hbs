<div class="page-header">
  <h3>Calendar Settings</h3>
</div>

<form class="form-horizontal settings-form">
  <fieldset>
    <legend>Calendars</legend>
    <div class="control-group">
      <label class="control-label">Gmail</label>
      <div class="controls">
        <input type="text" name="" id="" class="inline-field" value="Michael@gmail.com">
        <div class="label label-success"><i class="icon-todo"></i> Confirmed</div>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">Add Another Calendar</label>
      <div class="controls">
        <input type="text" placeholder="Calendar identifier?">
        <button class="btn">Add</button>
      </div>
    </div>
    <div class="form-actions">
      <button type="submit" class="btn btn-primary">Save</button>
    </div>
  </fieldset>
</form>
