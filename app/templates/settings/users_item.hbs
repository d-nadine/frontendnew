<div class="pull-left user-avatar">
  <img src="/images/default_avatars/small.png" alt="" class="img-polaroid">
</div>
<div class="clearfix">
  <div class="pull-right user-actions">
    {{#if lastLogin}}
      {{#unless isOwner}}
        {{#if isAdmin}}
          <button class="btn btn-small btn-danger" {{action "removeAsAdmin"}}>Remove as Admin</button>
        {{else}}
          <button class="btn btn-small btn-success" {{action "makeAdmin"}}>Make Admin</button>
        {{/if}}
        <button class="btn btn-link" {{action "deleteUser" this}}>
          <i class="icon-delete"></i>
        </button>
      {{/unless}}
    {{else}}
      <button class="btn btn-danger" {{action "deleteUser" this}}>Cancel Invite</button>
      <button class="btn btn-warning" {{action "resendInvite" this}}>Resend Invite</button>
    {{/if}}
  </div>

  <div class="user-meta">
    <h5 class="name">
      {{name}} <small>{{email}}</small>
      {{#if isAdmin}}
        <span class="label label-info">Admin</span>
      {{/if}}
    </h5>


    {{#if lastLogin}}
      <div class="message muted">
        <small>LAST LOGIN {{formatDateTime lastLogin format="full"}}</small>
      </div>
    {{else}}
      <div class="message text-warning">
        <small><i class="icon-warning"></i> NEVER LOGGED IN</small>

        {{#if view.resentInvite}}
          <div class="invite-resent">
            Invite Resent!
          </div>
        {{/if}}
      </div>
    {{/if}}
  </div>

</div>