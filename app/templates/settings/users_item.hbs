<div class="pull-left user-avatar">
  {{#if isLoaded}}
    {{avatar this style="small"}}
  {{else}}
    {{partial 'is_loading'}}
  {{/if}}
</div>
<div class="clearfix">
  <div class="pull-right user-actions">
    {{#unless isCurrentUser}}
      {{#if model.isAdmin}}
        <button class="btn btn-small btn-danger" {{bind-attr disabled=isSaving}} {{action "toggleIsAdmin"}}>Remove as Admin</button>
      {{else}}
        <button class="btn btn-small btn-success" {{bind-attr disabled=isSaving}} {{action "toggleIsAdmin"}}>Make Admin</button>
      {{/if}}
      <button class="btn btn-link" {{action "deleteUser" this}}>
        <i class="ss-symbolicons-block ss-trash"></i>
      </button>
    {{/unless}}
  </div>

  <div class="user-meta">
    <h5 class="name">
      {{#link-to 'user' model}}{{name}} <small>{{email}}</small>{{/link-to}}
      {{#if model.isAdmin}}
        <span class="label label-info">Admin</span>
      {{/if}}
    </h5>

    <div class="message muted">
      <small>LAST LOGIN {{formatDateTime lastLogin format="full"}}</small>
    </div>
  </div>

</div>
