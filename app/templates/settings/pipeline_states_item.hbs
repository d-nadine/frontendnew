<div class="pipeline-top">
  <div class="btn-toolbar">
    {{#if currentUser.isAdmin}}
      {{#if parentController.hasMultipleItems}}
        <div class="btn-group">
          <button class="btn btn-mini"
            {{bind-attr disabled="isFirstItem"}}
            {{action "movePipelineStateUp" this}}>▲</button>
          <button class="btn btn-mini"
          {{bind-attr disabled="isLastItem"}}
          {{action "movePipelineStateDown" this}}>▼</button>
        </div>
      {{/if}}
    {{/if}}
  </div>
  {{view view.pipelineStateName class="inline-field"}}
</div>
{{#if currentUser.isAdmin}}
  <div class="pipeline-bottom">
    {{each checklist itemViewClass="Radium.PipelineChecklistItemView" itemController="pipelineChecklistItem"}}
    {{render "pipelineChecklistItem" newChecklistItem}}
  </div>
{{/if}}
<div class="btn btn-mini btn-danger pipeline-delete-btn" {{action "confirmDeletion" this}}>
  <i class="ss-symbolicons-block ss-trash"></i>
</div>