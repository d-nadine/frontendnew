<div class="span2">
  {{input value=name class="inline-field"}}
  <div class="btn-toolbar">
    {{#if parentController.hasMultipleItems}}
    <div class="btn-group">
      <button class="btn btn-mini"
        {{bindAttr disabled="isFirstItem"}}
        {{action "movePipelineStateUp" this}}>▲</button>
      <button class="btn btn-mini"
      {{bindAttr disabled="isLastItem"}}
      {{action "movePipelineStateDown" this}}>▼</button>
    </div>
    {{/if}}
    <div class="btn btn-mini btn-danger pipeline-delete-btn" {{action "deletePipelineState" this}}>
      <i class="icon-delete"></i>
    </div>
  </div>
</div>
<div class="span8">
  {{each checklists itemViewClass="Radium.PipelineChecklistItemView" itemController="pipelineChecklistItem"}}
  {{render pipelineChecklistItem controller.newChecklistItem}}
</div>
