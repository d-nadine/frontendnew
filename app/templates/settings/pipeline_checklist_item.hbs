<div class="input-prepend input-append">
  <div class="btn-group">
    <button class="btn dropdown-toggle" data-toggle="dropdown">
      {{kind}}
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      {{#each controller.kinds}}
        <li><a href="#" {{action "setKind" this}}>{{this}}</a></li>
      {{/each}}
    </ul>
  </div>
  {{input type="text" value=content.description placeholder="Add additional item"}}
</div>
<div class="input-append">
  {{input type="number" class="span1" value=content.weight min="0" max="100"}}
  <span class="add-on">%</span>
</div>
{{#if content.isNewItem}}
  {{#if isValid}}
    <button class="btn btn-success" {{action "createChecklist"}}>
      <i class="icon-plus"></i>
    </button>
  {{/if}}
{{else}}
  <button class="btn btn-danger" {{action "deleteChecklist" this}}>
    <i class="icon-delete"></i>
  </button>
{{/if}}
