<div class="pipeline-states-list">
  <h3>Lead Sources</h3>
  <p>Where do you collect your leads from?</p>

  <ol class="lead-sources">
    {{#each leadSource in leadSources}}
      {{field-editor model=leadSource saveModel="saveSources" deleteModel="deleteLeadSource" cancelModel="cancelModel" parent=this tagName="li" isSaving=isSaving placeholderText="Add Lead Source"}}
    {{/each}}
  </ol>

  <div class="row">
    <div class="span5 pipeline-state-create">
      {{#if currentUser.isAdmin}}
        <button class="btn btn-large btn-success" {{action "createLeadSource" bubbles=false}}>
          Add Lead Source
        </button>
      {{/if}}
    </div>
  </div>
</div>
