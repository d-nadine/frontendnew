<div class="tabbar">
  <div class="tabbar-inner">
    <ul class="nav nav-tabs">
      {{#each categories}}
        <li>
          {{#linkTo "addressbook.filter" name}}
            {{#if isPrivate}}<i class="ss-standard ss-lock"></i> {{/if}}
            {{text}}
          {{/linkTo}}
        </li>
      {{/each}}
      <li>
        {{#linkTo "externalcontacts"}}
          <i class="ss-standard ss-lock"></i>
          Google Contacts
        {{/linkTo}}
      </li>
    </ul>
  </div>
</div>
<div class="page-header">
  <h1>Address Book</h1>
  <div class="address-book-controls">
    <div class="pull-right">
      <form class="form-search pipeline-search">
        <i class="ss-symbolicons-block ss-search"></i>
        {{input value=model.searchText type="text" class="field search-text"}}
      </form>
      {{#linkTo "leads.new" class="btn btn-main btn-primary"}}
        <i class="ss-standard ss-plus"></i> Contact
      {{/linkTo}}
    </div>
  </div>
</div>
<div class="search-result-list">
  {{#unless model.length}}
    <div class="alert alert-info text-center">
      <h3>You have no google contacts here. {{#linkTo "leads.new"}}Add a new contact{{/linkTo}}.</h3>
    </div>
  {{else}}
    {{#if hasNewPipelineDeal}}
    <div class="alert">
      {{resource-link model=newPipelineDeal.contact}} has been added to the {{#linkTo "deal" newPipelineDeal}}pipeline{{/linkTo}}.
    </div>
    {{/if}}
    <div class="search-results-header row-fluid">
      <div class="span2 checkers">
        <a href="#" {{action checkAll}}>
          {{#if checkedContent}}
            Select None
          {{else}}
            Select All
          {{/if}}
        </a>
        <div class="pull-right">
          <a href="#" {{action toggleThumbnails}}>
            {{#if isThumbnailsVisible}}
              Hide
            {{else}}
              Show avatars
            {{/if}}
          </a>
        </div>
      </div>
      <div class="span4 name">
        Name
      </div>
      <div class="span2">
        Promote
      </div>
    </div>
    {{#each controller}}
      <div class="search-result-list-item row-fluid">
        <div class="span2 checkers">
          {{check-box checked=isChecked class="checker-block"}}
          <div class="pull-right">
            {{#if isLoaded}}
              {{avatar this size=medium class="img-polaroid"}}
            {{else}}
              {{partial 'is_loading'}}
            {{/if}}
          </div>
        </div>
        <div class="span4 name">
          <div class="clearfix search-list-item-title">
            <h4>
              {{name}}
            </h4>
            {{#if email}}
              <div class="sidebar-email-view inline-editor-closed is-enabled inline-editor">
                <dl class="dl-horizontal contact-types-list">
                <dt><i class="ss-standard ss-mail muted"></i></dt>
                <dd>
                  {{#linkTo "emails.mailTo" "inbox" this}} {{email}}{{/linkTo}}
                </dd>
              </dl>
              </div>
            {{/if}}
            {{render 'sidebar/social' contactInfo}}
            <div class="title muted">{{title}}</div>
            {{#if company}}
              <div class="company">
                {{#linkTo "company" company}}{{company.name}}{{/linkTo}}
              </div>
            {{/if}}
          </div>
        </div>
        <div class="span2">
          <div class="btn-group btn-add-to-radium">
            <button class="btn btn-main btn-primary" {{action "promote" this "pipeline"}}>Add to Radium</button>
          </div>
        </div>
      </div>
    {{/each}}
  {{/unless}}
  {{regular-infinitescroller getMore='showMore' allLoaded=allPagesLoaded isLoading=isLoading}}
</div>
