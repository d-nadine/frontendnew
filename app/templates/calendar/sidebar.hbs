<div class="block">
  {{avatar this style="medium"}}
  <h3>{{name}}</h3>
</div>
{{#if isLoading}}
  {{partial 'is_loading'}}
{{/if}}
{{#unless selectedDay.date}}
  {{#each day in days}}
    <div class="events-list-header">{{formatDateTime day.date format=date}}</div>
    {{each item in day itemController="calendarTaskItem" itemViewClass="Radium.CalendarTaskItemView"}}
  {{/each}}
{{else}}
  <div class="events-list-back-button">
    <button class="btn" {{action selectDay}}>â€¹ Back</button>
  </div>
  <div class="events-list-header">{{formatDateTime selectedDay.date format=date}}</div>

  {{#if selectedDay.length}}
    {{each item in selectedDay itemController="calendarTaskItem" itemViewClass="Radium.CalendarTaskItemView"}}
  {{else}}
    <div class="events-list-item events-list-empty">No tasks for this day</div>
  {{/if}}
{{/unless}}
