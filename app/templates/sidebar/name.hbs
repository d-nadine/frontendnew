{{#if isEditing}}
  {{input value=form.name class="field detail" classNameBindings="controller.isValid::is-invalid :detail" placeholder="Deal Name"}}
{{else}}
  <h2 class="deal-title">
    <span class="resource-name">{{name}}</span>
    <i class="ss-standard ss-write" {{action "toggleEditor" target=view bubbles=false}}></i>
  </h2>
{{/if}}
