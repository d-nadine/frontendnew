<dl class="dl-horizontal contact-types-list contact-company-list">
  <dd>
    {{#if isEditing}}
      <div>
        {{autocomplete-textbox scopes="company" value=controller.form.company queryKey="displayName" validations=companyValidations validator=controller validationField="company" isValid=isValid writeableValue=true saveModel="createCompany" action="modelChanged" disabled=isDisabled}}
      </div>
    {{else}}
      <div class="pull-right">
        <i class="ss-standard ss-write" {{action "toggleEditor" target=view bubbles=false}}></i>
      </div>
      <div class="not-editing">
        {{#if company}}
          <p class="company-link">
            {{#link-to 'company' company}}
              {{company.displayName}}
            {{/link-to}}
          </p>
        {{else}}
          <span class="empty">Add company</span>
        {{/if}}
      </div>
    {{/if}}
  </dd>
</dl>
