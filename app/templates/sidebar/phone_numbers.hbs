<dl class="dl-horizontal contact-types-list">
  <dt><i class="ss-standard ss-phone muted"></i></dt>
  <dd>
    {{#if isEditing}}
      {{#each phoneNumber in form.phoneNumbers}}
        {{#multiple-control item=phoneNumber items=form.phoneNumbers model=model relationship="phoneNumbers" saveModel="stopEditing"}}
          {{phone-input type="text" value=value}}
        {{/multiple-control}}
      {{/each}}
    {{else}}
      <i class="ss-standard ss-write pull-right" {{action "toggleEditor" target=view bubbles=false}}></i>
      {{#if primaryPhone.value}}
        <a href="tel:{{unbound primaryPhone.value}}">
          <strong>{{primaryPhone.name}}</strong> {{primaryPhone.value}}
        </a>
      {{else}}
        <span class="empty">Add Phone Number here</span>
      {{/if}}
    {{/if}}
  </dd>
</dl>
