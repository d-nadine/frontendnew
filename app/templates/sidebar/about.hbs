<div>
  {{#if view.isEditing}}
    <h2>About</h2>
    <div>
      {{view view.textArea class="field" valueBinding=about placeholder="About"}}
    </div>
  {{else}}
    <h2>About <i class="icon-edit pull-right" {{action toggleEditor target=view bubbles=false}}></i></h2>
    <div>
      {{#if about}}
      <span>{{about}}</span>
      {{else}}
      <span>&nbsp;</span>
      {{/if}}
    </div>
  {{/if}}
</div>
