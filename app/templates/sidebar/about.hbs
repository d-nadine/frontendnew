<div class="sidebar-panel">
  <div class="sidebar-panel-header">
    <i class="ss-write pull-right" {{action toggleEditor target=view bubbles=false}}></i>
    <h6 class="sidebar-panel-title">
      <i class="ss-standard ss-openbook"></i> About
    </h6>
  </div>
  <div class="sidebar-panel-content">
    <div class="about">
      {{#if isEditing}}
        <div>
          {{view view.textArea class="field" valueBinding=form.notes placeholder="About"}}
        </div>
      {{else}}
        <div>
          {{#if notes}}
          <span>{{notes}}</span>
          {{else}}
          <span>&nbsp;</span>
          {{/if}}
        </div>
      {{/if}}
    </div>
  </div>
</div>