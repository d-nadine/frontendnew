{{#if isEditing}}
  <div class="contact-detail">
    <div class="control-group">
      {{upload-avatar model=model finishedUpload='stopEditing'}}
    </div>
    <div class="control-group">
      <label class="control-label">First Name</label>
      <div class="controls">
        {{view view.userFirstName valueBinding="form.firstName" class="field detail" placeholder="First Name" viewName="firstName"}}
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">Surname</label>
      <div class="controls">
        {{view view.userLastName valueBinding="form.lastName" class="field detail" placeholder="Surname" tabindex="lastName"}}
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">Title</label>
      <div class="controls">
        {{view view.userTitle valueBinding="form.title" class="field detail" placeholder="title" tabindex="title"}}
      </div>
    </div>
  </div>
{{else}}
  <div class="user-avatar pull-left">
    {{avatar this size=medium}}
  </div>
  <div class="clearfix">
    <div class="header">
      <h4 class="name">
        <i class="ss-standard ss-write pull-right" {{action "toggleEditor" target=view bubbles=false}}></i>
        {{name}}
      </h4>
    </div>
    {{#if title}}
      <div class="title">
        <p class="title muted">{{title}}</p>
      </div>
    {{/if}}
  </div>
{{/if}}
{{#unless userIsCurrentUser}}
  <button class="btn btn-block btn-follow">Follow {{firstName}}</button>
{{/unless}}
