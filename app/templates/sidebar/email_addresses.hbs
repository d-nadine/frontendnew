<dl class="dl-horizontal contact-types-list">
  <dt><i class="ss-standard ss-mail muted"></i></dt>
  <dd>
    {{#if isEditing}}
      <div>
        {{#each email in form.emailAddresses}}
          {{#multiple-control item=email items=form.emailAddresses model=model relationship="emailAddresses" saveModel="stopEditing"}}
            {{input type="text" value=value}}
          {{/multiple-control}}
        {{/each}}
      </div>
    {{else}}
      <i class="ss-standard ss-write pull-right" {{action "toggleEditor" target=view bubbles=false}}></i>
      {{#if primaryEmail.value}}
        {{#link-to "emails.mailTo" "inbox" this}}
          <strong>{{primaryEmail.name}}</strong> {{primaryEmail.value}}
        {{/link-to}}
      {{else}}
        <span class="empty">Add email here</span>
      {{/if}}
    {{/if}}
  </dd>
</dl>
