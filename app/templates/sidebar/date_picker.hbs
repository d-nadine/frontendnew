{{#if isEditing}}
  {{date-picker date=form.expectedCloseDate leader="" class="field" confirmEdit="stopEditing"}}
  <button class="btn btn-primary picker-submit" {{action "stopEditing"}}>
    OK
  </button>
{{else}}
  <div class="deal-status"{{action "startEditing"}}>
    <p class="formatted-close-date">
      {{#if model.expectedCloseDate}}
        {{formatDateTime model.expectedCloseDate format="calendar"}}
      {{else}}
        <em>None</em>
      {{/if}}
    </p>
    <i class="ss-standard ss-write pull-right" {{action "startEditing"}}></i>
  </div>
{{/if}}
