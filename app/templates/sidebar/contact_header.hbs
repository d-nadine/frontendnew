{{#if isEditing}}
  <div class="contact-detail">
    <div class="control-group">
      <label class="control-label">Name</label>
      <div class="controls">
        {{input value=form.name classNameBindings=":field controller.isValid::is-invalid :detail" placeholder="Name"}}
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">Title</label>
      <div class="controls">
        {{input value=form.title class="field detail" placeholder="Title"}}
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">Company</label>
      <div class="controls">
        {{view view.companyPicker class="field"}}
      </div>
    </div>
  </div>
{{else}}
  <div class="user-avatar pull-left">
    {{avatar this size=medium}}
  </div>
  <div class="clearfix">
    <h4 class="name">
      <i class="ss-write pull-right" {{action toggleEditor target=view bubbles=false}}></i>
      {{name}}
    </h4>
    <div class="company-title">
      <span class="title muted">{{title}}</span>
      <span class="company">
        {{#if company}}
          {{#linkTo "company" company}}{{company.name}}{{/linkTo}}
        {{else}}
          {{companyName}}
        {{/if}}
      </span>
    </div>
  </div>
{{/if}}
