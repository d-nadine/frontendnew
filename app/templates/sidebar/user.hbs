<h2>Assigned To</h2>

<div class="assigned-to">
  {{#if isEditing}}
    {{#linkTo user user}}
      {{avatar this class="img-polaroid"}}
    {{/linkTo}}
    {{view view.userPicker class="field"}}
  {{else}}
    <i class="ss-standard ss-write pull-right" {{action toggleEditor target=view bubbles=false}}></i>
    {{#linkTo user user}}
      {{avatar this class="img-polaroid"}}
    {{/linkTo}}

    <p>
      {{#linkTo user user}}{{user.name}}{{/linkTo}}<br/>
      <span class="title muted">{{user.title}}</span>
    </p>
  {{/if}}
</div>
