<div id="locationField">
  <input class="single" id="autocomplete" placeholder="Enter address or city" type="text" autocomplete="off" class="">
</div>
<div id="addressField">
  {{input value=current.street class="single route" type="text" placeholder="Street"}}<br/>
  {{input value=current.city class="single postal_town" type="text" placeholder="City"}}<br/>
  {{input value=current.state class="single administrative_area_level_1" type="text" placeholder="State / Province"}}<br/>
  {{input value=current.zipcode class="single postal_code" type="text" placeholder="Zip / Postal Code"}}<br/>
  {{country-picker changeCountry="changeCountry" current=current.country countryList=Radium.Countries}}
  <div id="addressType">
    {{#each address in addresses}}
      <div>
        <input name="current" type="radio" {{bind-attr checked=address.isCurrent}} {{action "changeAddress" address on="change"}}><span>{{capitalize address.name}}</span>
      </div>
    {{/each}}
  </div>
</div>