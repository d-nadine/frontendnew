<div class="editable-body" {{action "edit"}}>
  <div class="editable-indicator">
    <i class="ss-standard ss-write"></i> click to edit
  </div>
  <div class="editable-name">{{note.user.name}}:</div>
  {{rd-conversation-input value=buffer.body editable=isEditing focus=hasFocus}}
</div>
<div class="actions">
  <a class="cancel" {{action "cancel"}}>cancel</a>
  <button class="btn btn-link delete" {{action "delete"}}>Delete note</button>
  <button class="btn btn-main btn-primary delete" type="save" {{action "save"}}>Save</button>
</div>
{{render 'comments' note}}
