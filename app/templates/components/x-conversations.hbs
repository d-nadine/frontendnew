<div class="conversations-container row-fluid">
  <div class="conversations-sidebar">

    <div id="totals" class="group">
      <p>My Inbox</p>
      {{#link-to "conversations" "incoming" (query-params user=null) class="item"}}
        Incoming
        {{#if totalsLoading}}
          <span class="badge"><img src="/images/loading/ajax-loader.gif"/></span>
        {{else}}
          <span class="badge">{{incoming}}</span>
        {{/if}}
      {{/link-to}}


      {{#link-to "conversations" "waiting" (query-params user=null) class="item"}}
        Waiting for Reply
        {{#if totalsLoading}}
          <span class="badge"><img src="/images/loading/ajax-loader.gif"/></span>
        {{else}}
          <span class="badge">{{waiting}}</span>
        {{/if}}
      {{/link-to}}

      {{#link-to "conversations" "later" (query-params user=null) class="item"}}
        Send Later
        {{#if totalsLoading}}
          <span class="badge"><img src="/images/loading/ajax-loader.gif"/></span>
        {{else}}
          <span class="badge">{{later}}</span>
        {{/if}}
      {{/link-to}}

      {{#link-to "conversations" "replied" (query-params user=null) class="item"}}Replied To{{/link-to}}

      {{#link-to "conversations" "archived" (query-params user=null) class="item"}}Archived{{/link-to}}

      {{#link-to "conversations" "ignored" (query-params user=null) class="item"}}Ignored{{/link-to}}
    </div>
    {{#if team.length}}
      <div id="assigned" class="group">
        <div class="group-name">
          <p>Team</p>
        </div>
        <div class="item">
          <div>
            <span>
              <i class="ss-standard ss-users"></i>
            </span>
            <span>All</span>
            <span class="badge">{{allUsersTotals}}</span>
          </div>
        </div>
        {{users-totals usersTotals=usersTotals query="team" showUserRecords=attrs.showUserRecords parent=this}}
      </div>
    {{/if}}
    {{#if sharedTotals}}
      <div id="assigned" class="group shared">
        <div class="group-name">
          <p>Shared Inboxes</p>
        </div>
        {{users-totals usersTotals=sharedTotals query="shared" action="showUserRecords" parent=this isShared=true}}
      </div>
    {{/if}}
  </div>
  <div class="conversations-table">
    <div class="toolbar">
      <div class="left">
        <a href="#" class="btn btn-primary btn-large" {{action "emailAll"}}>Compose</a>
        <div class="btn-group">
          <a href="#" data-toggle="dropdown" class="btn-text btn-black dropdown-toggle">
            <i class="ss-standard ss-action"></i> Actions
          </a>
          <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
            <li><a href="#" {{action "emailAll"}}>Compose</a></li>
            <li class="divider"></li>
            {{#unless isIgnored}}
              <li>
                <a href="#" {{action "makePublicAll"}}>Share</a>
              </li>
            {{/unless}}
            {{#unless isArchived}}
              <li>
                <a href="#" {{action "archiveAll"}}>Archive</a>
              </li>
            {{else}}
              <li>
                <a href="#" {{action "archiveAll"}}>Remove from archive</a>
              </li>
            {{/unless}}
            {{#unless isIgnored}}
              <li><a href="#" {{action "ignoreAll"}}>Ignore</a></li>
            {{else}}
              <li><a href="#" {{action "ignoreAll"}}>Stop Ignoring</a></li>
            {{/unless}}
            <li class="divider"></li>
            <li class="dropdown-submenu">
              <a tabindex="-1" href="#">Assign To</a>
              <ul class="dropdown-menu">
                {{#each users.users as |user|}}
                  <li>
                    <a href="#" {{action "assignAll" user}}>{{avatar user style="tiny"}}{{user.displayName}}</a>
                  </li>
                {{/each}}
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="table-container companies">
      {{#if isIgnored}}
        {{!#link-to "settings.general" class="pull-left"}}Manage excluded domains{{!/link-to}}
      {{/if}}
      <div class="left-table">
        {{variadic-table list=emails columns=fixedColumns checkAllItems="checkAllItems" allChecked=allChecked check=true classNames="fixed-table convo" sort="sort" classNames="fixed" isLoading=isContentLoading}}
      </div>
      <div class="right-table">
        {{!variadic-table list=controller columns=columns sort="sort" classNames="variable" isLoading=isContentLoading}}
      </div>
      {{#if isContentLoading}}
        <div class="loading" class="text-center">
          <span class="muted">Loading...</span>
        </div>
      {{/if}}
    </div>
    {{!regular-infinitescroller getMore="showMore" allLoaded=false isLoading=false}}
  </div>
</div>