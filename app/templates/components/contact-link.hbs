{{#if contact.isLoaded}}
  {{avatar contact}}
{{else}}
  {{avatar contact}}
{{/if}}

{{#unless linkAction}}
  {{#link-to "contact" contact}}
    {{truncate contact.displayName length="100"}}
  {{/link-to}}
{{else}}
  <a href="#" {{action "linkAction" contact}}>{{truncate contact.displayName length="100"}}</a>
{{/unless}}