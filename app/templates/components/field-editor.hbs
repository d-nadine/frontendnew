{{#if isEditing}}
  {{input type="text" value=bufferedProxy.name disabled=isSaving placeholder="Add contact status"}}
{{else}}
  <span class="lead-source-item">{{model.name}}</span>
{{/if}}
{{#if isAdmin}}
<div class="checklist-controls">
  <button class="btn btn-danger" {{action "delete"}}>
    <i class="ss-symbolicons-block ss-trash"></i>
  </button>

  {{#if isEditing}}
    <button class="btn" {{action "cancel"}}>Cancel</button>
  {{else}}
    <button class="btn" {{action "edit"}}>Edit</button>
  {{/if}}

  {{#if isValid}}
    <button class="btn btn-success" {{action "save"}}>Save</button>
  {{/if}}
</div>
{{/if}}