<div class="email-form single-mode">
  <div class="email-form-body">
    <div class="message">
      <div class="subject-wrap">
        {{view subjectView type="text" value=form.subject class="subject tt-input" placeholder="subject" tabindex="1"}}
      </div>
      <div class="more-options">
        <a href="#" {{action "toggleEditorToolbar"}} class="format" tabindex="-1">
          <i class="ss-standard ss-font"></i>
        </a>
        {{file-uploader files=form.files disableSave=disableSave bucket=form.bucket model=form.reference class="btn-file btn-messages-action"}}
        <div class="btn-group vanilla">
          <a href="#" data-toggle="dropdown" class="dropdown-toggle" tabindex="-1">
            <i class="ss-standard ss-navigatedown"></i>
          </a>
          <ul class="dropdown-menu pull-right" role="menu" aria-labelledby="dLabel">
            <li class="divider"></li>
            {{#each insertAction in insertActions}}
            <li>
              <a {{action "insertPlaceholder" insertAction}} href="#">Insert {{capitalize insertAction.name}}</a>
            </li>
            {{/each}}
            <li class="dropdown-submenu">
              <a tabindex="-1" href="#">Insert Fields</a>
              <ul class="dropdown-menu">
                <li><a href="#">Title</a></li>
                <li><a href="#">Website</a></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
      <div class="textbox-wrap">
        {{richtext-editor files=files queryKey="display" content=form.html header="New Template" isInvalid=messageIsInvalid tabindex="2" parent=this source=insertActions}}
      </div>
      {{#if email.files.length}}
        {{upload-filelist files=email.files hideUploadedBy=true}}
      {{/if}}
      <div class="actions">
        <a href="#" class="btn">Send Me a Test</a>
        <a href="#" class="btn" {{action "saveTemplate" form}}>Update</a>
      </div>
    </div>
  </div>
</div>