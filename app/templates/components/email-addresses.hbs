<dt><i class="ss-standard ss-mail muted"></i></dt>
<dd>
  {{#if isEditing}}
    <div>
      {{#each email in emailAddresses}}
        {{#multiple-control item=email items=emailAddresses model=model relationship="emailAddresses" saveModel="stopEditing" labels=Radium.EmailLabels}}
        {{validation-input type="email" value=value enter="stopEditing" class="field" validations=_parent.emailValidations validator=_parent validationField="email" isValid=_parentObject.isValid placeholder="Email"}}
        {{/multiple-control}}
      {{/each}}
    </div>
  {{else}}
    <i class="ss-standard ss-write pull-right" {{action "startEditing" bubbles=false}}></i>
    {{#if model.primaryEmail.value}}
      <strong>{{model.primaryEmail.name}}</strong> {{model.primaryEmail.value}}
    {{else}}
      <span class="empty">Add email here</span>
    {{/if}}
  {{/if}}
</dd>
