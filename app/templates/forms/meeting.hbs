<form {{bindAttr class="isExpandable isEditable isExpanded justAdded :form-inline :meeting-form"}}>
  <div {{bindAttr class="isFinished :main"}} {{action expand}}>
    {{view view.checkbox classNames="pull-left"}}

    {{#if showOptions}}
      <a tabindex="3" class="btn btn-link pull-right" {{action toggleExpanded}}>
        {{#if isExpanded}}
          Hide
        {{else}}
          Options
        {{/if}}
      </a>
    {{/if}}

    {{#if showComments}}
      <i class="icon-comment pull-right"></i>
    {{/if}}

    {{#if showSuccess}}
      <span class="success pull-right">Meeting Added</span>
    {{/if}}


    {{view view.topicField classNames="field field-blend-in"}}
  </div>
  {{#if isExpanded}}
    <div class="options">
      {{view view.datePicker class="field"}}
      {{view view.startsAt}}
      {{view view.endsAt}}
      {{view view.location}}
      {{view view.userList}}
      <div class="block calendars">
        <div class="btn-group control-box">
          <a {{action showCalendars}}class="btn">
            <strong>Tuesday's Calendars</strong>
            {{#if calendarsOpen}}
              <i class="icon-chevron-up"></i>
            {{else}}
              <i class="icon-chevron-down"></i>
            {{/if}}
          </a>
        </div>
        <div class="save pull-right">
          <div class="btn-group">
            <button class="btn btn-primary">Save</button>
          </div>
          <div class="btn-group">
            <button class="btn">Cancel</button>
          </div>
        </div>
        {{#if calendarsOpen}}
          {{control 'forms/existing_meetings' controller.currentUser}}
        {{/if}}
      </div>
    </div>
  {{/if}}
</form>
