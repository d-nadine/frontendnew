<form {{bindAttr class="isExpandable isNew isEditable isExpanded justAdded :form :form-inline :meeting-form"}}>
  <div {{bindAttr class="hasElapsed showTopicTextBox:open:closed :primary"}} {{action expand}}>
    <div class="icon pull-left">
      <i class="icon-calendar"></i>
    </div>

    {{#if showOptions}}
      <a tabindex="3" href="#" class="btn btn-link pull-right" {{action toggleExpanded bubble=false}}>
        {{#if isExpanded}}
          Hide
        {{else}}
          Options
        {{/if}}
      </a>
    {{/if}}

    {{#if showSuccess}}
      <span class="success green pull-right">Meeting saved</span>
    {{/if}}

    {{#if showTopicTextBox}}
      {{view view.topicField classNames="field field-blend-in" viewName="topic"}}
    {{else}}
      <span class="topic">
        {{topic}} with
        {{#each attendees}}
          {{#linkToPerson this}}@{{this.name}}{{/linkToPerson}}
        {{/each}}
        at {{view.readableStartsAt}}
      </span>
    {{/if}}

    {{#if showComments}}
      <i class="icon-comment pull-right"></i>
    {{/if}}
  </div>

  {{#if isExpanded}}
    <div class="secondary">
      {{view view.datePicker class="field"}}
      {{view view.startsAt class="field"}}
      {{view view.endsAt class="field"}}
      {{view view.location class="field"}}
      {{#if isDisabled}}
        <ul>
        {{#each attendees}}
        <li>
          {{#linkToPerson this}}
            {{avatar this}}
            {{name}}
          {{/linkToPerson}}
        </li>
        {{/each}}
        </li>
      {{else}}
        {{view view.attendees class="field" viewName="attendeeList"}}
      {{/if}}
      <div class="block calendars">
        <div class="btn-group control-box">
          <a {{action showCalendars}}class="btn">
            <strong>{{currentDate}}'s Calendars</strong>
            {{#if calendarsOpen}}
              <i class="icon-arrow-down"></i>
            {{else}}
              <i class="icon-arrow-up"></i>
            {{/if}}
          </a>
        </div>
        {{#if calendarsOpen}}
          {{template 'forms/existing_meetings'}}
        {{/if}}
      </div>
      <div class="save">
        <div class="btn-group">
          <button class="btn btn-primary" {{action submit bubbles=false}}>Save</button>
        </div>
        <div class="btn-group">
          <button class="btn" {{action showCancelMeetingDialogue target="view" bubbles=false}} {{bindAttr disabled="view.cancelMeetingDisabled"}}>Cancel</button>
        </div>
      </div>
      {{partial 'add_action'}}
    </div>
  {{/if}}
  {{view view.cancelMeetingDialogue}}
</form>
