<table class="table table-striped table-bordered table-hover">
  {{#each content.meetings}}
    <tr>
      <td>
        {{avatar selectedUser}}
        {{#link-to "user" this}}{{selectedUser.name}}{{/link-to}}
      </td>
      <td {{bind-attr class="hasConflict"}}>
        {{formatDateTime startsAt format="short"}} to {{time endsAt format="short"}}
      </td>
      <td>
        {{topic}}
        {{#if meetingUsers}}
          with
          {{#each meetingUsers}}
            {{#link-to "user" this}}{{this.name}}{{/link-to}}&nbsp;
          {{/each}}
        {{/if}}
      </td>
      <td>
        {{#if hasConflict}}
        <i class="ss-standard ss-tag"></i>
        Conflict
        {{/if}}
      </td>
    </tr>
  {{else}}
  <tr>
    <td colspan="4">No meetings</td>
  </tr>
  {{/each}}
</table>

