<form {{bindAttr class="isExpandable isEditable isExpanded justAdded :form-inline :call-form"}}>
  <div {{bindAttr class="isFinished :main"}} {{action expand}}>
    {{view view.checkbox classNames="pull-left"}}

    {{view view.contactPicker classNames="contact-picker field field-blend-in"}}

    {{#if showCallBox}}
      {{view view.callBox classNames="pull-right"}}
    {{/if}}

    {{#if showOptions}}
      <a tabindex="3" class="btn btn-link pull-right" {{action toggleExpanded}}>
        {{#if isExpanded}}
          Hide
        {{else}}
          Options
        {{/if}}
      </a>
    {{/if}}

    {{#if showComments}}
      <i class="icon-comment pull-right"></i>
    {{/if}}

    {{#if showSuccess}}
      <span class="success pull-right">Call Added</span>
    {{/if}}


    {{view view.todoField classNames="field field-blend-in"}}
  </div>

  {{#if isExpanded}}
    <div class="options">
      {{view view.datePicker class="field"}}
      {{view view.userPicker class="field"}}

      {{#if isEditable}}
        <button class="btn btn-primary pull-right" type="submit" {{action submit}}>Save</button>
      {{/if}}
    </div>
  {{/if}}
</form>
