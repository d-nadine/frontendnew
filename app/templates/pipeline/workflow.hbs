{{partial 'pipeline/header'}}
<table class="table table-striped table-bordered table-hover totals">
  <thead>
    <tr>
      <th class="title">STATE</th>
      <th>TOTAL</th>
      <th>PERCENTAGE</th>
      <th>VALUE</th>
    </tr>
  </thead>
  <tbody>
    {{#each groups itemController="workflowGroupItem"}}
    <tr>
      <td class="title">
        <label class="control-lablel">{{capitalize content.title}}</label>
      </td>
      <td>
        <label {{bindAttr class=":badge length:badge-success:badge-important"}}>{{length}}
      </td>
      <td>
        {{percentage}}%
      </td>
      <td>
        <label>{{currency total}}</label>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
<div id="workflow-status">
  {{#each groups itemController="workflowGroupItem"}}
    <div class="group">
      <div class="meta">
        <div class="expand">
          <a {{action expand}} href="#">
          {{#if isExpanded}}
            <i class="icon-minus"></i>
          {{else}}
            <i class="icon-plus"></i>
          {{/if}}
          </a>
        </div>
        <div class="title">
          <a {{action expand}} href="#">
            {{capitalize title}}
          </a>
        </div>
        <div class="pull-right muted">
          Total: {{currency total}}
        </div>
        <div class="statusProgress">
          <div class="progress progress-info">
            <div class="bar" style="width: {{unbound percentage}}%"></div>
          </div>
        </div>
      </div>
      <div class="deals">
        {{#if isExpanded}}
          {{render 'pipeline/workflow_deals' deals}}
        {{/if}}
      </div>
    </div>
  {{/each}}
</div>
