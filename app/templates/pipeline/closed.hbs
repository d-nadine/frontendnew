{{#if showHeader}}
  {{partial 'pipeline/header'}}
{{/if}}
<table class="table table-hover pipeline-workflow-deals-list">
  <colgroup>
    <col class="checkbox">
    <col class="deal">
    <col class="assigned-to">
    <col class="pay-by">
    <col class="next-task">
    <col class="status">
    <col class="value">
  </colgroup>
  <thead>
    <tr>
      <th>&nbsp;</th>
      <th>Deal</th>
      <th>Assigned To</th>
      <th>Pay By</th>
      <th>Next Task</th>
      <th class="text-center">Value</th>
    </tr>
  </thead>
  <tbody>
    {{#each visibleContent itemController="pipelineItem"}}
      <tr {{bindAttr class="isChecked"}}>
        <td>
          {{view Radium.Checkbox class="checker-block" checkedBinding="isChecked"}}
        </td>
        <td>
          <p>
            <big>{{#linkTo deal this}}{{name}}</big>{{/linkTo}}<br/>
            {{#linkTo contact contact}}{{contact.name}}{{/linkTo}}<br/>
            {{contact.title}}
          </p>
        </td>
        <td>
          <p>
            <big class="name">{{#linkTo user user}}{{user.name}}{{/linkTo}}</big></br>
            <span class="title">{{user.title}}</span>
          <p>
        </td>
        <td {{bindAttr class="isPastPayment"}}>
          {{formatDateTime payBy format=date}}
        </td>
        <td>
          {{#if nextTask}}
            <span class="fixme upcase">unimplemented</span>
          {{else}}
            <i class="icon-warning"></i>
          {{/if}}
        </td>
        <td class="text-right">{{currency value}}</td>
      </tr>
    {{else}}
      <tr>
        <td colspan="7">No Deals</td>
      </tr>
    {{/each}}
  </tbody>
</table>

{{partial "shared/show_more"}}
{{partial "pipeline/totals"}}