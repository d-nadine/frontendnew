<div id="pipeline">
  <div>
    <ul id="status">
      {{#each status in statuses}}
        <li {{bindAttr class="isCurrent"}}>
          <h4>
            <a {{action showPipeline name href=true }}>
              {{statusText}}
            </a>
          </h4>
        </li>
      {{/each}}
    </ul>
  </div>
  <div class="status pull-right">
    <h4>4 New Leads/<br/><small>This Week</small></h4>
  </div>
</div>
<div id="pipeline-results">
  {{outlet widget}}
  {{outlet table}}
</div>
