{{partial 'pipeline/header'}}

<table class="table">
  <colgroup>
    <col class="checkbox">
    <col class="lead">
    <col class="assigned-to">
    <col class="age">
    <col class="next-task">
    <col class="deal-button">
    <col class="delete-button">
  </colgroup>
  <thead>
    <tr>
      <th class="checkbox">Select All</th>
      <th class="lead">Lead</th>
      <th class="assigned-to">Assigned To</th>
      <th class="age">Age</th>
      <th class="next-task">Next Task</th>
      <th class="deal-button">Forecast</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    {{#each visibleContent}}
      <tr {{bindAttr class="isChecked"}}>
        <td class="checkbox">
          {{check-box checked=isChecked class="checker-block"}}
        </td>
        <td class="lead">{{avatar this size=medium}}</td>
        <td class="assigned-to">
          <p>
            <span class="name">{{#linkTo "contact" this}}{{displayName}}{{/linkTo}}</span></br>
            <span class="title">{{title}}</span>
          <p>

          <p class="from"><strong>From:</strong>&nbsp;{{source}}</p>
        </td>
        <td>
          <p>
            <span class="name">{{#linkTo "user" user}}{{user.name}}{{/linkTo}}</span></br>
            <span class="title">{{user.title}}</span>
          <p>
        </td>
        <td {{bindAttr class="isExpired :age :text-center"}}>
          {{ageInWords createdAt}}
        </td>
        <td class="next-task">
          {{#if nextTask}}
            <span class="fixme upcase">unimplemented</span>
          {{else}}
            <i class="ss-standard ss-warning"></i>
          {{/if}}
        </td>
        <td class="deal-button">
          {{#linkTo "deals.fromContact" this class="btn"}}Add Deal{{/linkTo}}
        </td>
        <td class="text-right">
          {{partial 'search/delete'}}
        </td>
      </tr>
    {{else}}
      <tr>
        <td colspan="7" class="tac">No leads</td>
      </tr>
    {{/each}}
  </tbody>
</table>

{{partial "shared/show_more"}}
