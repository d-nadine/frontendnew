<table class="table table-striped table-bordered table-hover">
  <thead>
  <tr>
    <th>&nbsp;</th>
    <th>Lead</th>
    <th>Assigned To</th>
    <th>Age of Lead</th>
    <th>Next Task</th>
    <th>Value</th>
    <th>&nbsp;</th>
  </tr>
  </thead>
  <tbody>
    {{#each deal in view.content}}
      {{#with deal}}
        <tr {{bindAttr class="isChecked:success"}}>
          <td>
            {{view view.checkContent contentBinding="deal"}}
          </td>
          <td>
            {{#with contact}}
              {{avatar this}}
              <a {{action showContact this href=true}}>{{unbound name}}</a>
            {{/with}}
          </td>
          <td>
            {{#if user}}
              {{avatar user}}
              <a {{action showUser user href=true}}>{{unbound user.name}}</a>
            {{/if}}
          </td>
          <td {{bindAttr class="isExpired"}}>
            {{daysSinceText}}
          </td>
          <td>
            {{#if nextTaskText}}
              {{nextTaskText}}
            {{else}}
              <i class="icon-warning-sign"></i>
            {{/if}}
          </td>
          <td>{{currency value}}</td>
          <td>
            <a {{action deleteLead this target="controller"}}>
              <i class="icon-trash"></i>
            </a>
          </td>
        </tr>
      {{/with}}
    {{/each}}
  </tbody>
  {{view Radium.ValueTotalView}}
</table>
{{view view.remainingDealsLink}}
