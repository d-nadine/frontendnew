<div class="page-header pipeline-header">
  <div class="pull-left">
    <div class="pipeline-title pull-left">
      <h1>{{title}}</h1>
    </div>
    <div class="pull-left pipeline-grand-total">
      <h3><span>Total</span> {{currency total}}</h3>
    </div>
  </div>

  <div class="pull-right page-header-controls">
    {{partial "pipeline/add_lead_btn"}}
    {{partial "pipeline/actions_btn"}}
  </div>

  <div class="pipeline-header-center">
    <form class="form-search pipeline-search">
      <i class="ss-symbolicons-block ss-search"></i>
      {{input type=text value=searchText class="search-input"}}
    </form>
  </div>
</div>

{{#if currentUser.isAdmin}}
  <div class="alert-container">
    <div class="alert alert-info pull-left">
      <h4 class="text-center">Set up your pipeline {{#linkTo "settings.pipelineStates"}}here{{/linkTo}}</h4>
    </div>
    <div class="alert alert-info pull-right">
      <h4 class="text-center">Set up your lead sources {{#linkTo "settings.leadSources"}}here{{/linkTo}}</h4>
    </div>
  </div>
{{/if}}

<div class="clearfix"></div>
<div class="hidden">
  <div class="show-results">
    <a href="#" class="btn" {{action toggleResultsTable target="view" bubbles=false}}>
      {{#if view.showResults}}
        <i class="ss-standard ss-navigateup"></i>
      {{else}}
        <i class="ss-standard ss-navigatedown"></i>
      {{/if}}
    </a>
  </div>
  <table class="table table-striped table-bordered table-hover totals">
    <thead>
      <tr>
        <th class="title">STATE</th>
        <th>TOTAL</th>
        <th>PERCENTAGE</th>
        <th>VALUE</th>
      </tr>
    </thead>
    <tbody>
      {{#each groups itemController="workflowGroupItem"}}
      <tr>
        <td class="title">
          {{#if isWorkflow}}
            {{#linkTo "pipeline.workflow" content.title}}<label class="control-lablel">{{capitalize content.title}}</label>{{/linkTo}}
          {{/if}}
          {{#if isClosed}}
            {{#linkTo "pipeline.closed"}}<label class="control-lablel">{{capitalize content.title}}</label>{{/linkTo}}
          {{/if}}
          {{#if isLost}}
            {{#linkTo "pipeline.lost"}}<label class="control-lablel">{{capitalize content.title}}</label>{{/linkTo}}
          {{/if}}
        </td>
        <td>
          <label {{bindAttr class=":badge length:badge-success:badge-important"}}>{{length}}</label>
        </td>
        <td>
          {{percentage}}%
        </td>
        <td>
          <label>{{currency total}}</label>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<div class="pipeline-workflows-list">
  {{#each groups itemController="workflowGroupItem"}}
    <div class="pipeline-workflows-list-item">
      <div class="page-header">
        <h3>{{capitalize content.title}} ({{length}})</h3>
      </div>
      <div class="deals">
        {{#if isWorkflow}}
          {{render 'pipeline/workflow_deals' deals}}
        {{/if}}
        {{#if isClosed}}
          {{render 'pipeline/closed' deals}}
        {{/if}}
        {{#if isLost}}
          {{render 'pipeline/lost' deals}}
        {{/if}}
      </div>
    </div>
  {{/each}}
</div>
