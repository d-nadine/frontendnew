{{partial 'pipeline/header'}}
<div class="show-results">
  <a href="#" class="btn" {{action toggleResultsTable target="view" bubbles=false}}>
    {{#if view.showResults}}
      <i class="icon-arrow-up"></i>
    {{else}}
      <i class="icon-arrow-down"></i>
    {{/if}}
  </a>
</div>
<table class="table table-striped table-bordered table-hover totals">
  <thead>
    <tr>
      <th class="title">STATE</th>
      <th>TOTAL</th>
      <th>PERCENTAGE</th>
      <th>VALUE</th>
    </tr>
  </thead>
  <tbody>
    {{#each groups itemController="workflowGroupItem"}}
    <tr>
      <td class="title">
        {{#if isWorkflow}}
          {{#linkTo pipeline.closed}}<label class="control-lablel">{{capitalize content.title}}</label>{{/linkTo}}
        {{/if}}
        {{#if isClosed}}
          {{#linkTo pipeline.closed}}<label class="control-lablel">{{capitalize content.title}}</label>{{/linkTo}}
        {{/if}}
        {{#if isLost}}
          {{#linkTo pipeline.lost}}<label class="control-lablel">{{capitalize content.title}}</label>{{/linkTo}}
        {{/if}}
      </td>
      <td>
        <label {{bindAttr class=":badge length:badge-success:badge-important"}}>{{length}}
      </td>
      <td>
        {{percentage}}%
      </td>
      <td>
        <label>{{currency total}}</label>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
<div id="workflow-status">
  {{#each groups itemController="workflowGroupItem"}}
    <div class="group">
      <div class="meta">
        <div class="expand">
          <a {{action expand}} href="#">
          {{#if isExpanded}}
            <i class="icon-minus"></i>
          {{else}}
            <i class="icon-plus"></i>
          {{/if}}
          </a>
        </div>
        <div class="title">
          <a {{action expand}} href="#">
            {{capitalize title}}
          </a>
        </div>
        <div class="pull-right muted">
          Total: {{currency total}}
        </div>
        <div class="statusProgress">
          <div class="progress progress-info">
            <div class="bar" style="width: {{unbound percentage}}%"></div>
          </div>
        </div>
      </div>
      <div class="deals">
        {{#if isExpanded}}
          {{#if isWorkflow}}
            {{render 'pipeline/workflow_deals' deals}}
          {{/if}}
          {{#if isClosed}}
            {{render 'pipeline/closed' deals}}
          {{/if}}
          {{#if isLost}}
            {{render 'pipeline/lost' deals}}
          {{/if}}
        {{/if}}
      </div>
    </div>
  {{/each}}
</div>
