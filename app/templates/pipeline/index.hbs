<div class="page-header">
  <div class="page-header-controls">
    {{partial "pipeline/add_lead_btn"}}
  </div>
  <div id="title">
    <h1>{{title}}</h1>
  </div>
</div>
<div class="hidden">
  <div class="show-results">
    <a href="#" class="btn" {{action toggleResultsTable target="view" bubbles=false}}>
      {{#if view.showResults}}
        <i class="icon-arrow-up"></i>
      {{else}}
        <i class="icon-arrow-down"></i>
      {{/if}}
    </a>
  </div>
  <table class="table table-striped table-bordered table-hover totals">
    <thead>
      <tr>
        <th class="title">STATE</th>
        <th>TOTAL</th>
        <th>PERCENTAGE</th>
        <th>VALUE</th>
      </tr>
    </thead>
    <tbody>
      {{#each groups itemController="workflowGroupItem"}}
      <tr>
        <td class="title">
          {{#if isWorkflow}}
            {{#linkTo pipeline.workflow content.title}}<label class="control-lablel">{{capitalize content.title}}</label>{{/linkTo}}
          {{/if}}
          {{#if isClosed}}
            {{#linkTo pipeline.closed}}<label class="control-lablel">{{capitalize content.title}}</label>{{/linkTo}}
          {{/if}}
          {{#if isLost}}
            {{#linkTo pipeline.lost}}<label class="control-lablel">{{capitalize content.title}}</label>{{/linkTo}}
          {{/if}}
        </td>
        <td>
          <label {{bindAttr class=":badge length:badge-success:badge-important"}}>{{length}}</label>
        </td>
        <td>
          {{percentage}}%
        </td>
        <td>
          <label>{{currency total}}</label>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<div class="pipeline-workflows-list">
  {{#each groups itemController="workflowGroupItem"}}
    <div class="pipeline-workflows-list-item">
      <div class="page-header">
        <h3>{{capitalize content.title}} <small>({{length}})</small></h3>
      </div>
      <div class="deals">
        {{#if isWorkflow}}
          {{render 'pipeline/workflow_deals' deals}}
        {{/if}}
        {{#if isClosed}}
          {{render 'pipeline/closed' deals}}
        {{/if}}
        {{#if isLost}}
          {{render 'pipeline/lost' deals}}
        {{/if}}
      </div>
    </div>
  {{/each}}
</div>
