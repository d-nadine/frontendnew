<div class="conversations-container row-fluid">
  <div class="conversations-sidebar span2">
    <div id="totals" class="group">
      <p>My Inbox</p>
      <div class="item active">
        <span class="lbl">{{#link-to "conversations" "incoming"}}Incoming{{/link-to}}</span>
        <span class="badge">{{incoming}}</span>
      </div>
      <div class="item">
        <span class="lbl">{{#link-to "conversations" "waiting"}}Waiting for Reply{{/link-to}}</span>
        <span class="badge">{{waiting}}</span>
      </div>
      <div class="item">
        <span class="lbl">{{#link-to "conversations" "later"}}Send Later{{/link-to}}</span>
        <span class="badge">{{later}}</span>
      </div>
      <div class="item">
        <span class="lbl">{{#link-to "conversations" "replied"}}Replied To{{/link-to}}</span>
        <span class="badge">{{replied}}</span>
      </div>
      <div id="archived" class="item">
        <span class="lbl">Archived</span>
      </div>
      <div id="ignored" class="item">
        <span class="lbl">Ignored</span>
      </div>
    </div>
  </div>
  <div class="conversations-table">
    <div class="toolbar">
      <div class="left">
        <a href="#" class="btn">Compose</a>
        <div class="btn-group">
          <button type="button" data-toggle="dropdown" class="btn btn-default dropdown-toggle">Actions <span class="caret"></span></button>
          <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
            <li><a href="#">Compose</a></li>
            <li class="divider"></li>
            <li><a href="#">Track</a></li>
            <li><a href="#">Archive</a></li>
            <li><a href="#">Ignore</a></li>
            <li><a href="#">Delete</a></li>
            <li class="divider"></li>
            <li class="dropdown-submenu">
              <a tabindex="-1" href="#">Assign To</a>
              <ul class="dropdown-menu">
                {{#each users}}
                <li>
                  <a href="#" {{action bulkAssign this}}>{{avatar this style="tiny"}}{{displayName}}</a>
                </li>
                {{/each}}
              </ul>
            </li>
          </ul>
        </div>
      </div>
      <div class="right">
        <a href="#" class="list"><i class="ss-standard ss-list"></i></a>
        {{#link-to "messages" "inbox" class="chat"}}<i class="ss-standard ss-chat"></i>{{/link-to}}
        <!--<input type="text" placeholder="Search">-->
      </div>
    </div>
    <table class="convo">
      <thead>
        <tr>
          <th class="check"><input type="checkbox"></th>
          <th>Contact</th>
          <th>Assigned To</th>
          <th>Follow-up</th>
          <th>Subject</th>
          <th>Received</th>
        </tr>
      </thead>
      <tbody>
        {{#each controller}}
        <tr>
          <td class="check"><input type="checkbox"></td>
          <td class="contact">
            <i class="ss-standard ss-user"></i>
            {{resource-link-to contact}}
          </td>
          <td class="assign">
            <div class="btn-group">
              <a href="#" data-toggle="dropdown" class="assignto">
                {{avatar assignedTo style="tiny"}}
                <span class="to">{{assignedTo.displayName}}</span>
                <span class="caret"></span>
              </a>
              {{#if assignees.length}}
              <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                {{#each assignees}}
                <li>
                  <a href="#" {{action assignContact contact this}}>
                    {{avatar this style="tiny"}}{{displayName}}
                  </a>
                </li>
                {{/each}}
              </ul>
              {{/if}}
            </div>
          </td>
          <td>
            <span class="follow-yes"></span>
          </td>
          <td class="subject">{{#link-to "emails.show" "inbox" this}}{{truncatedSubject}}{{/link-to}}</td>
          <td>{{ageInWords time}}</td>
          <td class="choose">
            {{#unless contact.isPublic}}
            <a {{action track contact}} href="#">Track</a>
            <span> | </span>
            {{/unless}}
            <a href="#">Ignore</a>
          </td>
          <td class="delete">
            <a href="#" {{action delete this}} class="btn btn-link btn-remove-field">
              <i class="ss-symbolicons-block ss-trash"></i>
            </a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
