{{#if content}}
  {{#if hasNewerEmail}}
    <a  class="btn btn-large btn-full-width" {{action selectContent newestEmail}}>
      Go to Most Recent Email<i class="icon-arrow-right pull-right"></i>
    </a>
  {{/if}}

  {{#with history}}
    {{render 'messages/email_history' this}}
  {{/with}}
{{else}}
  <div class="block">
    <h4>No Email Selected</h4>
  </div>
{{/if}}
