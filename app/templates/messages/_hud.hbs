<!-- columns must add up to 8 -->
<div {{bindAttr class=":clearfix :email-hud contact.isLead:is-lead-contact"}}>
  <div class="pull-right email-hud-actions">
    {{#unless isSaving}}
      {{#if contact.isPersonal}}
        <div class="btn-group btn-add-to-radium">
          <button class="btn btn-main btn-primary" {{action changeStatus model "pipeline"}}>Add to Radium</button>
          <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <li>
              <a href="#" {{action changeStatus model "pipeline"}}>As Lead</a>
            </li>
            <li>
              <a href="#" {{action changeStatus model "exclude"}}>Exclude from Pipeline</a>
            </li>
          </ul>
        </div>
      {{else}}
        {{#if contact.nextTask}}
          {{render "next_task" contact.nextTask}}
        {{/if}}
      {{/if}}
    {{else}}
      {{partial 'saving'}}
    {{/unless}}
  </div>

  <div class="pull-left">
    {{#if contact.isLoaded}}
      {{avatar contact size="medium"}}
    {{else}}
      {{partial 'is_loading'}}
    {{/if}}
  </div>
  <div class="email-hud-content">
    <h4 class="email-hud-title">
      {{#linkTo 'contact' contact}}{{contact.displayName}}{{/linkTo}}
    </h4>
    {{#unless contact.isPersonal}}
      <span class='badge badge-info'>Radium Contact</span>
    {{/unless}}
    <p>
      mail to: {{#linkTo "emails.mailTo" "inbox" contact}}{{contact.primaryEmail.value}}{{/linkTo}}
      <br>
      {{#if contact.title}}
        {{contact.title}}
      {{/if}}
      {{#if contact.company}}
        {{#linkTo "company" contact.company}}{{contact.company.name}}{{/linkTo}}
      {{/if}}
      {{#if contact.openDeals.length}}
        <table class="contact-deals-table">
          <tbody>
            {{#each contact.openDeals}}
              <tr>
                <td>{{status}}</td>
                <td>{{#linkTo "deal" this}}{{name}}{{/linkTo}}
                <td>
                  <strong>{{currency value}}</strong>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      {{/if}}
    </p>
  </div>
</div>
{{#if hasNewPipelineDeal}}
<div class="alert">
  {{resource-link model=contact}} has been added to the {{#linkTo "deal" newPipelineDeal}}pipeline{{/linkTo}}.
</div>
{{/if}}
