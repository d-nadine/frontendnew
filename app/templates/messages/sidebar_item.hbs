<button {{action check this bubbles=false}} {{bindAttr class="isChecked:checked:unchecked :btn-checker"}}>
  <i class="icon-todo"></i>
</button>

<div class="content" {{action selectItem this}}>
  {{#if hasAttachments}}
    <i class="icon-attachments pull-right"></i>
  {{/if}}

  {{yield}}

  <div class="footer">
    <a {{action deleteItem this target="controllers.messages"}} href="#" class="btn-icon delete">
      <i class='icon-delete'></i>
    </a>

    {{time timestamp class="muted upcase pull-right"}}
  </div>
</div>
