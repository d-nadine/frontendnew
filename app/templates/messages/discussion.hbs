<div class="hud">
  <div class="block context">
    <div class="contact-info">
      {{avatar contact style="medium" class="img-polaroid"}}
      <p>
        <span class="name">{{contact.name}}</span></br>
        <span class="title">{{contact.title}}</span>
      </p>
    </div>

    <div class="deal-info">
      <h2 class="upcase">Status</h2>

      <table>
        <tbody>
          {{#if activeDeal}}
            <tr>
              <td>
                <strong>
                  {{#linkTo deal activeDeal}}{{activeDeal.name}}{{/linkTo}}
                </strong>
              </td>
              <td class="capitalize">{{activeDeal.status}}</td>
              <td class="money">{{currency activeDeal.value}}</td>
            </tr>
          {{else}}
            <tr colspan="3">
              <td class="muted">No deals yet</td>
            </tr>
          {{/if}}
        </tbody>
      </table>
    </div>

    <div class="task-info">
      <h2 class="upcase">Next Task</h2>

      <table>
        <tbody>
          <tr colspan="3">
            <td>
              {{template "shared/next_task"}}
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div>
  <div class="block discussion-card message-card">
    <div class="header">
      <i class="icon-discussion"></i>
      <p><big><strong>
        {{#if aboutDeal}}
          Discussion about the {{#linkTo deal reference}}{{reference.name}}{{/linkTo}} deal
        {{/if}}

        {{#if aboutContact}}
          Discussion about {{#linkTo contact reference}}{{reference.name}}{{/linkTo}} ({{reference.title}})
        {{/if}}
        </strong></big>
      </p>

      <div class="users">
        With
        <ul class="sentence">
          {{#each users}}
            <li>{{#linkTo user this}}{{name}}{{/linkTo}}</li>
          {{/each}}
        </ul>
      </div>
    </div>
    <hr/>

    <div class="content">
      <div class="text">
        {{topic}}
      </div>

      {{template "shared/attachments"}}

      <hr/>

      <div class="footer text-right">
        <a class="btn btn-link" {{action delete this}}>
          <i class="icon-delete"></i>
        </a>
      </div>
    </div>
  </div>

  <div class="block block-gray">
    {{control 'comments' model}}
  </div>
</div>
