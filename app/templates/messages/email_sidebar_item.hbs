<div class="message-item-avatar pull-left">
  {{#if threadIsLoading}}
    <img src="/images/loading/turningArrow.gif"/>
  {{else}}
    {{#if sender.isLoaded}}
      {{avatar sender style="medium"}}
    {{else}}
      {{avatar sender style="medium"}}
    {{/if}}
  {{/if}}
</div>
<div class="clearfix message-item-details">
  <h5 class="message-item-title">{{resource-link-to sender}}</h5>
  {{#if contact.isPersonal}}
    <span class="label">
      Not a Radium Contact
    </span>
  {{/if}}
</div>
