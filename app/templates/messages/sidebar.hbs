<div class="messages-list-controls">
  <ul class="nav nav-tabs messages-tabs">
    <li {{bind-attr class="inboxIsActive:active"}}>
      {{#link-to "messages" "inbox"}}
        {{#if inboxIsActive}}
          {{folder}} {{#if totalRecords}}({{totalRecords}}){{/if}}
        {{else}}
          Inbox
        {{/if}}
      {{/link-to}}
    </li>
    <li {{bind-attr class="radiumIsActive:active"}}>
      {{#link-to "messages" "radium"}}
        Tracked Email
      {{/link-to}}
    </li>
    <li {{bind-attr class=":messages-search-tab searchIsActive:active"}}>
      {{#link-to "messages" "search"}}
        <i class="ss-symbolicons-block ss-search"></i>
      {{/link-to}}
    </li>
  </ul>
  {{outlet messages-sidebar-content}}
</div>
