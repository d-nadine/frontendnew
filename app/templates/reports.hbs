<div class="page-header">
  <div class="pull-right hidden">
    <form class="form-search pipeline-search">
      <i class="ss-symbolicons-block ss-search"></i>
      {{input value=model.searchText type="text" class="field search-text"}}
    </form>
    <div class="btn-group">
      <button class="btn btn-main address-book-button" >Actions</button>
      <button class="btn dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
          <li>
            <a href="#">Report Action</a>
          </li>
      </ul>
    </div>
  </div>
  <h1>{{account.name}} Reports</h1>
</div>

{{partial "reports/_filter"}}

<div class="report-section report-overview">
  <div class="page-header">
    <h4>Overview</h4>
  </div>
  <div class="report-content">
    <div class="summary">
      <div class="infographic">
        {{report-icons 
          total=status_lead_total
          icon="ss-user"
          fontFamily="ss-symbolicons"}}
      </div>
      <div class="text-center summary-details">
        <h2>{{status_lead_total}} leads</h2>
        <h4>
          80%<br>
          <small>Lead close rate</small>
        </h4>
        <h4>
          <i class="ss-symbolicons ss-user green"></i> Up 5%<br>
          <small>Compared to last month</small>
        </h4>
        <a href="#report-leads" class="btn">More</a>
      </div>
    </div>
    <div class="summary">
      <div class="infographic">
        {{report-icons 
          total=status_open_total
          icon="ss-briefcase"
          fontFamily="ss-standard"}}
      </div>
      <div class="text-center summary-details">
        <h2>{{status_open_total}} Negotiating</h2>
        <h4>
          80%<br>
          <small>Negotiating close rate</small>
        </h4>
        <h4>
          <i class="ss-standard ss-briefcase text-error"></i> Down 5%<br>
          <small>Compared to last month</small>
        </h4>
        <a href="#report-deals" class="btn">More</a>
      </div>
    </div>
    <div class="summary">
      <div class="infographic">
        {{report-icons 
          total=status_closed_total
          icon="ss-bill"
          fontFamily="ss-symbolicons"}}
      </div>
      <div class="text-center summary-details">
        <h2>{{status_closed_total}} Closed</h2>
        <h4>
          {{status_closed_total}} deals<br>
          <small>$28, 000.00</small>
        </h4>
        <h4>
          <i class="ss-standard ss-up green"></i> Up 5%<br>
          <small>from last year</small>
        </h4>
        <a href="#report-closed" class="btn">More</a>
      </div>
    </div>
    <div class="summary">
      <div class="infographic">
        {{report-icons 
          total=status_lost_total
          icon="ss-deletefile"
          fontFamily="ss-symbolicons"}}
      </div>
      <div class="text-center summary-details">
        <h2>{{status_lost_total}} Lost</h2>
        <h4>
          {{status_lost_total}} deal<br>
          <small>$28, 000.00</small>
        </h4>
        <h4>
          <i class="ss-standard ss-up text-error"></i> Up 5%<br>
          <small>Average number of lost deals a month</small>
        </h4>
        <a href="#report-lost" class="btn">More</a>
      </div>
    </div>
  </div>
</div>

<a name="report-sales" id="report-sales" class="report-anchor">&nbsp;</a>
<section  class="report-section">
  <div class="page-header">
    <div class="pull-right report-section-total">
      {{currency controller.total_closed}}
    </div>
    <h4>Sales</h4>
  </div>

  {{pie-chart 
    dimension=controller.userDimension 
    group=controller.usersGroup
    action="filterByUser"
    size="300" 
    radius="150"}}
</section>

<a name="report-leads" id="report-leads" class="report-anchor">&nbsp;</a>
<section  class="report-section">
  <div class="page-header">
    <div class="pull-right report-section-total">
      {{status_lead_total}} Leads
    </div>
    <h4>Leads</h4>
  </div>

  {{bar-chart 
    dimension=controller.dealDimension 
    group=controller.dealsGroup
    domain=controller.leadsDomain
    action="filterByDate"
    valueAccessor="leads"
    height="400"}}
</section>

<a name="report-deals" id="report-deals" class="report-anchor">&nbsp;</a>
<section class="report-section">
  <div class="page-header">
    <div class="pull-right report-section-total">
      {{status_open_total}} deals
    </div>
    <h4>Deals</h4>
  </div>

  {{bar-chart 
    dimension=controller.dealDimension 
    group=controller.dealsGroup
    domain=controller.leadsDomain
    action="filterByDate"
    valueAccessor="deals"
    height="400"}}
</section>

<a name="report-closed" id="report-closed" class="report-anchor">&nbsp;</a>
<section class="report-section">
  <div class="page-header">
    <div class="pull-right report-section-total">
      {{status_closed_total}} deals
    </div>
    <h4>Closed Deals</h4>
  </div>

  {{bar-chart 
    dimension=controller.dealDimension 
    group=controller.dealsGroup
    domain=controller.leadsDomain
    action="filterByDate"
    valueAccessor="closed"
    height="400"}}
</section>

<a name="report-lost" id="report-lost" class="report-anchor">&nbsp;</a>
<section class="report-section">
  <div class="page-header">
    <div class="pull-right report-section-total">
      {{status_lost_total}} deals
    </div>
    <h4>Lost Deals</h4>
  </div>

  {{bar-chart 
    dimension=controller.dealDimension 
    group=controller.dealsGroup
    domain=controller.leadsDomain
    action="filterByDate"
    valueAccessor="lost"
    height="400"}}
</section>