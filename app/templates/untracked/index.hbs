<div id="addressbook" class="untracked-view">
  <div class="page-header row-fluid">
    <div class="subhead">
      <div class="left">
        <div class="nav-wrap">
          <span class="count">
            <span {{bind-attr class=":chosen content.isLoading:is-loading"}}>
              {{#unless content.isLoading}}
                {{checkedTotal}}
              {{/unless}}
            </span>
            <span class="divider">/</span>
            <span {{bind-attr class=":total content.isLoading:is-loading"}}>
              {{#unless content.isLoading}}
                {{totalRecords}}
              {{/unless}}
            </span>
          </span>
          <div class="tools">
            <div class="btn-group vanilla">
              <a href="#" data-toggle="dropdown" class="dropdown-toggle">
                <i class="ss-standard ss-cursor"></i> Actions
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                <li>
                  <a href="#" {{action "makePublicAll"}}>Share</a>
                </li>
                <li>
                  <a href="#" {{action "confirmDeletion"}}>Delete</a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="working-anim">
        {{#if working}}
          <img src="/images/loading/ajax-loader.gif"/>
        {{/if}}
      </div>
      <div class="col-selector">
        {{input type="text" value=searchText class="searchbox" placeholder="search"}}
      </div>
    </div>
    <div class="contacts-sidebar">
      <ul class="nav nav-pills">
        <li {{bind-attr class="isFiltered:active"}}>
          {{#link-to "untracked.index" "filtered"}}
          <div class="nav-pills-left">
            <i class="ss-standard ss-filter" data-original-title="" title=""></i>
            <span>Filtered</span>
          </div>
          <div class="nav-pills-right">
            <span>{{filtered}}</span>
          </div>
          {{/link-to}}
        </li>
        <li {{bind-attr class="isAll:active"}}>
          {{#link-to "untracked.index" "all"}}
          <div class="nav-pills-left">
            <i class="ss-standard ss-filter" data-original-title="" title=""></i>
            <span>All</span>
          </div>
          <div class="nav-pills-right">
            <span>{{all}}</span>
          </div>
          {{/link-to}}
        </li>
        <li {{bind-attr class="isSpam:active"}}>
          {{#link-to "untracked.index" "spam"}}
          <div class="nav-pills-left">
            <i class="ss-standard ss-filter" data-original-title="" title=""></i>
            <span>Spam</span>
          </div>
          <div class="nav-pills-right">
            <span>{{spam}}</span>
          </div>
          {{/link-to}}
        </li>
      </ul>
    </div>
    <div class="table-container untracked">
      {{#unless currentUser.initialContactsImported}}
        <div class="alert alert-info initial-importing text-center">
          {{view Radium.ProgressBar percentageBinding="currentUser.contactsImported"}}
          <p><img src="/images/loading/ajax-loader.gif"/> {{currentUser.contactsImported}}% of your contacts have been imported&hellip;</p>
        </div>
      {{/unless}}
      <div class="left-table">
        {{variadic-table list=controller columns=fixedColumns checkAllItems="checkAllItems" allChecked=allChecked check=true classNames="fixed-table" sort="sort" classNames="fixed" isLoading=content.isLoading}}
      </div>
      <div class="right-table">
        {{variadic-table list=controller columns=columns sort="sort" classNames="variable" isLoading=content.isLoading}}
      </div>
      {{#if content.isLoading}}
        <div class="loading" class="text-center">
          <span class="muted">Loading...</span>
        </div>
      {{/if}}
    </div>
    {{regular-infinitescroller getMore="showMore" allLoaded=false isLoading=false}}
  </div>
</div>
{{#delete-confirmation deleteAction="deleteAll" showDeleteConfirmation=showDeleteConfirmation}}
<p>This action cannot be undone! Deleting these <strong>{{checkedTotal}}</strong> item(s) will be permanent.</p>
{{/delete-confirmation}}
