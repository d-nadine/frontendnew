<div class="form-box">
  <div class="form-box-controls">
    <a href="#"><i class="ss-standard ss-checkcalendar"></i>Add a Meeting</a>
    <a href="#" class="active"><i class="ss-standard ss-check"></i>Add Follow-up</a>
    <a href="#"><i class="ss-standard ss-mail"></i>Email</a>
    <a href="#"><i class="ss-standard ss-compose"></i>Log Activity</a>
  </div>
  <div class="form-container">

    {{#if showTodoForm}}
      {{render "forms/todo" todoForm}}
    {{/if}}
    {{#if showMeetingForm}}
      {{render "forms/meeting" meetingForm}}
    {{/if}}
    {{#if showNoteForm}}
      {{render "forms/note" noteForm}}
    {{/if}}
    {{#if showEmailForm}}
      {{email-form email=emailForm parent=this signature=signature addSignature="addSignature" mode="form" saveEmail="saveEmail"}}
    {{/if}}

    <div class="form-box-controls">
      {{#if compactFormButtons}}
        <button {{action "submitForm"}} class="btn btn-primary btn-large">
          {{#if showTodoForm}}
            Add Task
          {{/if}}
          {{#if showMeetingForm}}
            Add Task
          {{/if}}
          {{#if showNoteForm}}
            Add Note
          {{/if}}
          {{#if showEmailForm}}
            Add Email
          {{/if}}
        </button>
      {{else}}
        <div class="form-switcher">
          {{#if todoForm}}
            <button {{action "showForm" "todo"}} {{bind-attr class=":btn :btn-action showTodoForm:active"}}>
              <i class="ss-standard ss-check"></i>
            </button>
          {{/if}}

          {{#if meetingForm}}
            <button {{action "showForm" "meeting"}} {{bind-attr class=":btn :btn-action showMeetingForm:active"}}>
              <i class="ss-standard ss-calendar"></i>
            </button>
          {{/if}}
          {{#if noteForm}}
            <button {{action "showForm" "note"}} {{bind-attr class=":btn :btn-action showNoteForm:active"}}>
              <i class="ss-standard ss-note"></i>
            </button>
          {{/if}}
        </div>
      {{/if}}
    </div>
  </div>
</div>
