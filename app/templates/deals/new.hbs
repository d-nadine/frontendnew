<div class="checklist block">
  <div class="checklist-title">
    <span class="checklist">Deal Checklist</span>
  </div>
  <div class="checklist-total pull-right">
    <h1>0%</h1>
    <button class="btn btn-success">
      <i class="icon-plus"></i>
    </button>
  </div>
</div>
<div class="block checklist-items">
  <div class="checks">
    <table class="">
      <tbody>
        {{#each checklistItem in checklist.checklistItems itemController="checklistItem"}}
          {{#with checklistItem}}
            <tr>
              <td><i {{bindAttr class="checklistItemIcon"}}></i></td>
              <td class="check">{{view Ember.Checkbox checkedBinding="isFinished"}}</td>
              <td>{{description}}</td>
              <td {{bindAttr class="isFinished:is-finished:muted"}}>{{weight}}%</td>
            </tr>
          {{/with}}
        {{/each}}
      </tbody>
    </table>
  </div>
  <div class="forecast pull-right">
    <div>
      <span class="checklist">Deal Forecast</span>
    </div>
    <div class="completed">
      <h2 class="muted">0% Done</h2>
    </div>
    <div class="current">
      improve your forecast by 25 % by <br/>
      sending a quote to your client
    </div>
    <div class="button">
      <button class="btn btn-success">
        Finish Todo
      </button>
    </div>
  </div>
  <div class="clearfix"></div>
</div>
<form class="form form-horizontal">
  <div class="secondary">
    <fieldset>
      <h3><i class="icon-plus"></i>New Deal</h3>
      <div class="control-group">
        <label class="control-label">Deal Name</label>
        <div class="controls">
          <input type="text" class="field input-xlarge" placeholder="Deal Name">
        </div>
      </div>
    </fieldset>
  </div>
</form>
