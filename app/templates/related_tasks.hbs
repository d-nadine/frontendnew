{{#if model.length}}
  <ol class="related-tasks unstyled">
    {{#each group in sortedGroups}}
      {{#each task in group itemController="relatedTaskItem"}}
        {{#with task}}
          {{#if isSaving}}
            <strong>Saving.....</strong>
          {{else}}
            {{#if isTodo}}
              <li {{bindAttr class="isFinished isOverdue"}}>
                <i class="ss-standard ss-check"></i>
                {{#linkTo "unimplemented"}}{{description}}{{/linkTo}}
                <span class="time">
                  Due
                  {{#linkTo "unimplemented"}}
                    {{formatDateTime time format="date"}}
                  {{/linkTo}}
                </span>
              </li>
            {{/if}}

            {{#if isCall}}
              <li {{bindAttr class="isFinished isOverdue"}}>
                <i class="ss-standard ss-phone"></i>
                {{#linkTo "unimplemented"}}Call{{/linkTo}}
                with
                {{#linkTo "user" user}}{{user.name}}{{/linkTo}}
                and
                {{#linkTo "contact" contact}}{{contact.name}}{{/linkTo}}

                <span class="time">
                  on
                  {{#linkTo "unimplemented"}}
                    {{formatDateTime time format="date"}}
                  {{/linkTo}}
                  at
                  {{#linkTo "unimplemented"}}
                    {{formatDateTime time format="short"}}
                  {{/linkTo}}
                </span>
              </li>
            {{/if}}

            {{#if isMeeting}}
              <li>
                <i class="ss-standard ss-calendar"></i>
                {{#linkTo "unimplemented"}}Meeting {{topic}}{{/linkTo}}
                with
                {{list participants}}

                <span class="time">
                  on
                  {{#linkTo "unimplemented"}}
                    {{formatDateTime time format="date"}}
                  {{/linkTo}}
                  at
                  {{#linkTo "unimplemented"}}
                    {{formatDateTime time format="short"}}
                  {{/linkTo}}
                </span>
              </li>
            {{/if}}
          {{/if}}
        {{/with}}
      </li>
      {{/each}}
    {{/each}}
  </ol>
{{/if}}
