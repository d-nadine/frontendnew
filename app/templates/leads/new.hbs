<form class="form form-horizontal">
  <div class="secondary">
    <h1>Lead</h1>
    <div>
      <a href="#" class="btn btn-large btn-primary single">Single Lead</a>
      <a href="#" class="btn btn-large">Import Leads from file</a>
      <a href="#" class="btn btn-large">From Social Network</a>
    </div>
    <fieldset>
      <div class="control-group">
        <label class="control-label">Name</label>
        <div class="controls">
          {{view view.existingContactChecker}}
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">Company</label>
        <div class="controls">
          <input type="text" class="field" placeholder="Company">
        </div>
      </div>
      {{#if view.isNewLead}}
      <div class="control-group">
        <label class="control-label">Email</label>
        <div class="controls">
          <input type="text" class="field" placeholder="Email">
        </div>
      </div>
      {{view view.phoneNumbers}}
      <div class="control-group">
        <label class="control-label">Assigned To</label>
        <div class="controls assigned">
          {{#linkTo user assignedTo}}{{assignedTo.name}}{{/linkTo}}
        </div>
      </div>
      {{/if}}
      {{#if view.contactExists}}
      <div class="existing">
        <span>{{selectedContact.name}}</span> is already an existing customer. Do you want to add a deal?
        <div>
          <a href="#" class="btn">Cancel</a>
          <a href="#" class="btn btn-success">Yes</a>
        </div>
      </div>
      {{/if}}
    </fieldset>
  </div>
</div>
