<div class="row">
  
  <div id="sidebar" class="span3">
    {{collection Radium.ActivityFilterList contentBinding="Radium.dealsDateGroupsController.filterTypes"}}
    <h4>Team</h4>
    {{collection usersList id="user-list" class="filters people"}}
  </div>
  
  <div class="span9">
    <div class="row">
        {{view searchView}}
    </div>

    <div id="form-container"></div>
    {{view dealsChart}}
    {{view Radium.DateFilterView dateFilterBinding="Radium.dealsDateGroupsController.dateFilter"}}
    <div class="row">
      {{#view Radium.FeedDateGroupView 
        id="feed" class="span9"
        dateFilterBinding="Radium.dealsDateGroupsController.dateFilter"
        categoryFilterBinding="Radium.dealsDateGroupsController.categoryFilter"
        contentBinding="Radium.dealsDateGroupsController.content"
      }}
        {{#each Radium.dealsDateGroupsController.selectedDateType}}
          <section>
            <div class="page-header">
              <h2>{{formatDate datetime}}</h2>
            </div>
            <div class="row feed-item">
              <div class="span9">
              {{#if pending.length}}
                <div class="alert alert-block">
                  <p><b>{{pending.length}}</b> deals pending: $</p>
                </div>
              </div>
              <div class="span9">
                <div class="well span8">
                  {{#each pending}}
                    <div class="page-header">
                      <h5>{{ description }}</h5>
                    </div>
                    <div class="span2">
                      <div class="thumbnail">
                        <img src="http://placehold.it/150x150" {{bindAttr alt="contact.name"}}>
                        <div class="caption">
                          <h5>With: {{ contact.name }}</h5>
                          <p>
                            <a href="#" class="btn primary">Call</a> 
                            <a href="#" class="btn">Email</a>
                          </p>
                        </div>
                      </div>
                    </div>
                    <div class="span5">
                      <p>
                        <b>Assigned To</b>: {{ user.name }}<br>
                        <b>Close Date</b>: {{ closeBy }}<br>
                        <b>Amount</b>: ${{ dealTotal }}<br>
                        <b>Status</b>: {{ state }}
                      </p>
                      <hr>
                      <ul>
                      {{#each lineItems}}
                        <li>{{ name }} | {{ quantity }} | ${{ price }}</li>
                      {{/each}}
                      </ul>
                    {{/each}}
                    </div>
                </div>
              </div>
            {{/if}}
            </div>
          </section>
        {{/each}}
      {{/view}}
    </div>
  </div>
</div>