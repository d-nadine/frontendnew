<ul class="unstyled notifications-list">
  <li class="notification-item notification-item-top">
    <div class="notification-item-content">
      <div class="notification-item-header">
        <div class="pull-left">
          <h5>Notifications</h5>
        </div>
        {{#if length}}
          <div class="clearfix pull-right">
            {{#if isDeleting}}
              {{partial "is_deleting"}}
            {{/if}}
            <button class="btn btn-small" {{action "deleteAllNotifications"}}>Dismiss All</button>
          </div>
        {{/if}}
      </div>
    </div>
  </li>
  {{#if controller.length}}
    {{#each controller}}
      {{#if isLoaded}}
        {{renderNotification "notification"}}
      {{else}}
        {{partial 'is_loading'}}
      {{/if}}
    {{/each}}
    {{infinite-scroller isAtBottom=view.isAtBottom getMore='showMore' allLoaded=allPagesLoaded isLoading=isContentLoading}}
    {{#if contentIsLoading}}
      {{partial "is_loading"}}
    {{/if}}
  {{else}}
    <div class="text-center">
      No notifications
    </div>
 {{/if}}
</ul>
