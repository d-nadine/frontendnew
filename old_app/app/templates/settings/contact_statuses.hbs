<div class="pipeline-states-list">
  <h3>Contact Statuses</h3>

  <ol class="lead-sources">
    {{#each contactStatus in model}}
      {{field-editor model=contactStatus tagName="li" parent=this placeholderText="Add Contact Status" afterSave="refreshContactStatuses"}}
    {{/each}}
  </ol>

  <div class="span5 pipeline-state-create">
    {{#if currentUser.isAdmin}}
      <button class="btn btn-large btn-success" {{action "addNewContactStatus" bubbles=false}}>
        Add Contact Status
      </button>
    {{/if}}
  </div>
</div>