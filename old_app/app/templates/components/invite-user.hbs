{{#if isDuplicate}}
  <div class="alert alert-warning">
    A user with this email address has already registered.
  </div>
{{/if}}
{{#if error}}
  {{partial 'exceeded_subscription_plan_error'}}
{{/if}}
{{input value=newUserEmail class="input-xlarge invite-team" placeholder="Invite a member by email to use Radium" action="inviteUser"}}
<button class="btn btn-large" {{bind-attr disabled="controller.isDisabled"}} {{action "inviteUser"}}>
  Invite
</button>