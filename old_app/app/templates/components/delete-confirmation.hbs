{{#if showDeleteConfirmation}}
  {{#x-modal close="closeConfirmationModal"}}
  <div class="modal fade">
    <div class="modal-header">
      <button type="button" class="close" {{action "closeConfirmationModal"}} aria-hidden="true">&times;</button>
      <h3>Are You Sure?</h3>
    </div>

    <div class="modal-body">
      {{yield}}
      <button class="btn btn-large btn-danger btn-block" {{action "delete" this}}>{{confirmationMessage}}</button>
    </div>

    <div class="modal-footer">
      <a href="#" class="btn" {{action "closeConfirmationModal"}}>Cancel</a>
    </div>
  </div>
  {{/x-modal}}
{{/if}}