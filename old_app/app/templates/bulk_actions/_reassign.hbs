{{#if showAssignForm}}
  <form>
    <div class="assign">
      {{autocomplete-textbox source=users value=controller.reassignForm.assignToUser queryKey="displayName" validations=userValidations validator=controller validationField="user" disabled=controller.isDisabled}}
      <div class="assign-todo">
        <i class="ss-standard ss-check icon-todo"></i>
        {{view view.assignTodoField viewName="assignTodo"}}
      </div>
      <div class="reassign pull-right">
        <a href="#" class="btn btn-primary" {{bind-attr disabled="justAdded"}} {{action "reassign" this}}>
          <i class="ss-standard ss-left"></i>
          Reassign
        </a>
      </div>
    </div>
  </form>
{{/if}}
